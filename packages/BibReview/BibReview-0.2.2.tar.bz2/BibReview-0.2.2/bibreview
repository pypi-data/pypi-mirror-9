import sys, os, os.path, inspect

if os.path.dirname(sys.argv[0]).endswith("bin"): # /usr/{local/}bin
  sys.path.append(os.path.abspath(os.path.join(os.path.dirname(sys.argv[0]), "..", "share")))
else: # Raw source not installed
  sys.path.insert(0, os.path.abspath(os.path.join(os.path.dirname(sys.argv[0]), "..")))


import bibreview, bibreview.globdef as globdef, bibreview.command_line as command_line
import bibreview.bayes_classifier

command_line.run(sys.argv[1:])

