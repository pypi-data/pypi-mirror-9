<?xml version="1.0"?>
<data>
    <xpath expr="/form/field[@name='active']" position="after">
        <separator string="Measurements" id="measurements" colspan="6"
            states="{'invisible': Eval('type').in_(['service'])}"/>
            <group id="measurements" colspan="6" col="3"
                states="{'invisible': Eval('type').in_(['service'])}">
                <label name="length"/>
                <field name="length"/>
                <field name="length_uom"/>
                <label name="height"/>
                <field name="height"/>
                <field name="height_uom"/>
                <label name="width"/>
                <field name="width"/>
                <field name="width_uom"/>
                <label name="weight"/>
                <field name="weight"/>
                <field name="weight_uom"/>
            </group>
    </xpath>
</data>
