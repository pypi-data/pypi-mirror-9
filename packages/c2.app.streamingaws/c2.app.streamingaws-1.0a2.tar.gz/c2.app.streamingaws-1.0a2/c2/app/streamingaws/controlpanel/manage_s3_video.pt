<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/prefs_main_template/macros/master"
      i18n:domain="">
<metal:block metal:fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border', 1)" />
<body>
<div metal:fill-slot="prefs_configlet_content">

        <h1 class="documentFirstHeading">
            List of streaming videos
        </h1>

        <form action="" method="post"
                    tal:attributes="action string:${context/absolute_url}/@@manage-s3-video">
        <div>
            <table border="1">
                <tr>
                    <th>In Plone</th>
                    <th>S3 Path</th>
                </tr>
                <tr tal:repeat="item view/get_videos">
                    <td tal:content="item/in_plone">Object Title:Path</td>
                    <td tal:content="item/s3_path">S3 Path</td>
                    <input tal:condition="not:item/in_plone" type="hidden" name="garbage_videos"
                           tal:attributes="value item/s3_path" />
                </tr>
            </table>
		</div>
        <div>
                <input type="hidden" name="remove.flag" value="1" />
                <input type="submit" name="remove.garbage.video" value="Remove garbage on S3" />
        </div>
        </form>

</div>
</body>
</html>