#!/usr/bin/env python

import click
import dupes

__author__ = "Devin Kelly"


@click.command()
@click.option('-r', '--remove', is_flag=True, default=False,
              help='find dupes and remove them')
def main(remove):

    d = dupes.Dupes()
    d.get_hashes()
    duped_files = d.dedupe()

    if remove:
        d.remove()
    else:
        for ii in duped_files:
            print 'DUPES'
            for kk in duped_files[ii]:
                print kk

    return

if __name__ == "__main__":
    main()
