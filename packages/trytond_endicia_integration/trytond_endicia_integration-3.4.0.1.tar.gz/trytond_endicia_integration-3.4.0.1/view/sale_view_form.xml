<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook/page[@id=&quot;shipments&quot;]" position="after">
        <page string="Endicia [USPS]" states="{'invisible': Not(Bool(Eval('is_endicia_shipping')))}" id="endicia">
            <label name="is_endicia_shipping"/>
            <field name="is_endicia_shipping"/>
            <newline/>
            <label name="endicia_mailclass"/>
            <field name="endicia_mailclass" widget="selection"/>
            <label name="endicia_mailpiece_shape"/>
            <field name="endicia_mailpiece_shape"/>
            <newline/>
            <button name="update_endicia_shipment_cost" string="Update Shipment Cost"/>
        </page>
    </xpath>
</data>
