<form action="." method="post" enctype="multipart/form-data" class="form"
      tal:attributes="method view/method;
                      enctype view/enctype;
                      acceptCharset view/acceptCharset;
                      accept view/accept;
                      action view/action;
                      name view/name;
                      id view/id">

<div class="container-fluid">
  <h2>j01.form widgets</h2>
  <h3>Text widgets</h3>
  <div class="row">
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/password"></div>
      <div tal:content="structure view/widgets/textline"></div>
      <div tal:content="structure view/widgets/text"></div>
    </div>
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/date"></div>
      <div tal:content="structure view/widgets/datetime"></div>
      <div tal:content="structure view/widgets/email"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h3>Checkbox Widgets</h3>
      <div tal:content="structure view/widgets/checkbox"></div>
      <div tal:content="structure view/widgets/checkBoxInline"></div>
      <div tal:content="structure view/widgets/singleCheckBox"></div>
      <div tal:content="structure view/widgets/singleCheckBoxInline"></div>
    </div>
    <div class="col-sm-6">
      <h3>Checkbox Picker Widgets</h3>
      <div tal:content="structure view/widgets/checkBoxPicker"></div>
      <div tal:content="structure view/widgets/checkBoxInlinePicker"></div>
      <div tal:content="structure view/widgets/singleCheckBoxPicker"></div>
      <div tal:content="structure view/widgets/singleCheckBoxInlinePicker"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h3>Radio Widgets</h3>
      <div tal:content="structure view/widgets/radio"></div>
      <div tal:content="structure view/widgets/radioInline"></div>
    </div>
    <div class="col-sm-6">
      <h3>Radio Picker Widgets</h3>
      <div tal:content="structure view/widgets/radioPicker"></div>
      <div tal:content="structure view/widgets/radioInlinePicker"></div>
    </div>
  </div>

  <h3>Select Widgets</h3>
  <div class="row">
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/selectPicker"></div>
    </div>
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/multiSelectPicker"></div>
    </div>
  </div>

  <h3>Select2 Widgets</h3>
  <div class="row">
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/singleSelect2"></div>
      <div tal:content="structure view/widgets/select2"></div>
    </div>
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/datepicker"></div>
    </div>
  </div>

  <h3>Widget Options</h3>
  <div class="row">
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/textHelp"></div>
      <div tal:content="structure view/widgets/allInOne"></div>
    </div>
    <div class="col-sm-6">
      <div tal:content="structure view/widgets/addOnAfter"></div>
      <div tal:content="structure view/widgets/addOn"></div>
    </div>
  </div>

  <h3>Buttons (btns)</h3>
  <div class="row">
    <div class="col-sm-12">
      <div class="btns">
        <div class="primary">
          <div class="btn">
            <input tal:replace="structure view/actions/simplePrimary/render" />
          </div>
          <div class="btn">
            <a href="#">A link as button</a>
          </div>
          <div class="link">
            <input tal:replace="structure view/actions/simpleLink/render" />
          </div>
        </div>
        <div class="secondary">
          <div class="btn">
            <input tal:replace="structure view/actions/simpleSecondary/render" />
          </div>
          <div class="link">
            <input tal:replace="structure view/actions/simpleLink/render" />
          </div>
        </div>
      </div>
    </div>
  </div>

  <h3>Buttons (bootstrap)</h3>
  <div class="row">
    <div class="col-sm-12">
      <input tal:replace="structure view/actions/simple/render" />
      <input tal:replace="structure view/actions/default/render" />
      <input tal:replace="structure view/actions/primary/render" />
      <input tal:replace="structure view/actions/info/render" />
      <input tal:replace="structure view/actions/warning/render" />
      <input tal:replace="structure view/actions/danger/render" />
      <input tal:replace="structure view/actions/link/render" />
    </div>
  </div>

</div>
</form>