<div id="" class="form-group" i18n:domain="p01"
     tal:attributes="id string:${view/id}-widget;
                     class python:view.getCSSClass(classPattern='%(class)s-widget', errorPattern='%(class)s-error widget-error') + ' form-group'">
  <label class="control-label" tal:condition="view/label" tal:attributes="for view/id">
    <tal:block tal:content="structure view/label" i18n:translate="">label</tal:block>
    <span class="control-required" tal:condition="view/required">*</span>
  </label>
  <tal:block tal:content="structure view/render">widget</tal:block>
  <span class="control-error"
        tal:condition="view/error"
        tal:content="structure view/error/render">error</span>
  <span class="control-description"
        tal:condition="view/description|nothing"
        tal:content="structure view/description|nothing">description</span>
</div>
