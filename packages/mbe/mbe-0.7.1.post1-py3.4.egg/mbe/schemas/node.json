      "minItems": 1
    },
    "canWrite": {
      "description": "A list of the groups that can write to the node(and create/delete subnodes).",
      "type": "array",
      "items": {
        "$ref": "mbe://type.json#properties/objectId",
        "refSchemaId": "5d3b8e21-adf3-4005-b73c-1fb63a46f399",
        "propertyId": "98286b6b-8cba-4086-8a71-2d754ac023b2",
        "objectId": "true"
      },
      "minItems": 1
    },
    "allowedChildTypes": {
      "description": "A list of the allowed types of children.",
      "type": "array",
      "items": {
        "$ref": "mbe://type.json#properties/uuid",
        "propertyId": "9161503f-a3fe-4b7e-8c0a-8553bd3f8043"
      }
    }
  },
  "required": [
    "name",
    "createdWhen",
    "schemaId",
    "canRead",
    "canWrite"
  ],
  "collection": "node",
  "schemaId": "a9ca8030-6ea4-11e4-9803-0800200c9a66"
}