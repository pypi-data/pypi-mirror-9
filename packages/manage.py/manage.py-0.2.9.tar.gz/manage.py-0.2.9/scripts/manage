#!/usr/bin/env python
import os
import imp
import sys


sys.path.append(os.getcwd())

        
from manager import cli, puts


def main():
    try:
        imp.load_source('usermanager', os.path.join(os.getcwd(), 'manage.py'))
    except IOError as exc:
        return puts(cli.red(exc))
    from usermanager import manager

    manager.main()


main()
