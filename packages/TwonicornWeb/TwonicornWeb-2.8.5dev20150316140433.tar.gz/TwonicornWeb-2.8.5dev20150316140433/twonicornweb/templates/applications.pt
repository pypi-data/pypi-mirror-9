<div metal:use-macro="layout">
    <div metal:fill-slot="content">

    <p>
      Please select an application from the list below to see deployments.
    </p>
      
    <div id="app_main">
      <!!-- Results navigation -->
      <div id="pag_container">
        <div tal:attributes="class 'pag_buttons disable' if offset == 0 else 'pag_buttons'">
          <a tal:attributes="href '?start=0'"><img src='/static/nav-le.gif' border='0'></a>
        </div>
        <div tal:attributes="class 'pag_buttons disable' if offset == 0 else 'pag_buttons'">
          <a tal:attributes="href '?start=%d' % (offset-perpage)"><img src='/static/nav-l.gif' border='0'></a>
        </div>
        <div class="pag_content">
          <span tal:content="'%d-%d of %d' % (offset+1, min((offset+perpage),total), total)">
            11-20 of 123
          </span>
        </div>
        <div tal:attributes="class 'pag_buttons disable' if (offset+perpage) &gt;= total else 'pag_buttons'">
          <a tal:attributes="href '?start=%d' % (offset+perpage)"><img src='/static/nav-r.gif' border='0'></a>
        </div>
        <div tal:attributes="class 'pag_buttons disable' if (offset+perpage) &gt;= total else 'pag_buttons'">
          <a tal:attributes="href '?start=%d' % ((total-1)/perpage*perpage)"><img src='/static/nav-re.gif' border='0'></a>
        </div>
      </div>
  
      <!!-- Results -->
      <div id="app_results">
        <table width="100%" tal:condition="applications">
          <tr>
            <th>Application ID</th>
            <th>Application Name</th>
            <th>Node Group</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Updated By</th>
            <th tal:condition="user.cp_auth"></th>
          </tr>
          <tbody tal:repeat="item applications">
          <tr class="app">
            <td><a href="/deploys?application_id=0"
                   tal:attributes="href '/deploys?application_id=%d&nodegroup=%s' % (item.application_id,item.nodegroup)"
                   tal:content="item.application_id">Application ID Link</a></td>
            <td><a href="/deploys?application_id=0"
                   tal:attributes="href '/deploys?application_id=%d&nodegroup=%s' % (item.application_id,item.nodegroup)"
                   tal:content="item.application_name">Application Name Link</a></td>
            <td><a href="/deploys?application_id=0"
                   tal:attributes="href '/deploys?application_id=%d&nodegroup=%s' % (item.application_id,item.nodegroup)"
                   tal:content="item.nodegroup">Nodegroup Link</a></td>
            <td tal:content="item.localize_date_created">1975-09-28 00:00:00</td>
            <td tal:content="item.localize_date_updated">1975-09-28 00:00:00</td>
            <td tal:content="item.updated_by">bandta</td>
            <td tal:condition="user.cp_auth"><a href="/cp/application?mode=edit&application_id=0"
                   tal:attributes="href '/cp/application?mode=edit&application_id=%s' % item.application_id">Edit</a></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

