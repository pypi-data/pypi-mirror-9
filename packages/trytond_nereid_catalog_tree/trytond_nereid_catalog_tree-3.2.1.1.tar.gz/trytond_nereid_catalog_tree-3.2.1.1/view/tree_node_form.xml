<?xml version="1.0"?>
<form string="Product Tree Node">
    <label name="name" />
    <field name="name" />
    <label name="parent" />
    <field name="parent" />
    <label name="slug" />
    <field name="slug" />
    <label name="type_" />
    <field name="type_" />
    <label name="products_per_page" />
    <field name="products_per_page" />
    <label name="sequence" />
    <field name="sequence" />
    <label name="active" />
    <field name="active" />
    <label name="display" />
    <field name="display" />
    <notebook colspan="4">
        <page string="Children" id="children">
            <field name="children" />
        </page>
        <page string="Description" id="description">
            <field name="description" />
        </page>
        <page string="Image" id="tree-node-image">
            <field name="image" />
            <newline/>
            <field name="image_preview" widget="image" colspan="4" height="200"/>
        </page>
    </notebook>
</form>
