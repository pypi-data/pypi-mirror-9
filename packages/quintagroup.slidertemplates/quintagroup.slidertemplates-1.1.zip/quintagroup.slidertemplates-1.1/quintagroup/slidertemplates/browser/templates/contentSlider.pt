<dl class="portlet portletCollection"
     i18n:domain="plone"
     tal:define="collection_url view/collection_url;
                 headerfull view/data/header; 
                 header python:headerfull.replace(' ', '');
                 toLocalizedTime nocall:context/@@plone/toLocalizedTime;">
 
<!--      <dt class="portletHeader">
         <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span tal:content="header" />
        </a>
     </dt>     -->
    <div id="owl-demo" tal:attributes="id header" class="bx-wrapper" >

      <div class="slider-wrapper-outer">
        <ul class="slider-wrapper">
          <li class="item" 
              tal:repeat="item view/results">
              <a  href="#"
                  class="tile"
                  tal:attributes="href item/getURL" 
                  tal:define="oddrow repeat/item/odd;
                          obj item/getObject">
                <div  class="image_block"
                      tal:condition="python:item.portal_type in ['Image', 'News Item']"
                      tal:attributes="style string:background-image:url(${item/getURL}/@@images/image/preview);">
                </div>
              </a>     
          </li>
        </ul>
      </div>
      <div class="controls">
        <div class="pager-wrapper-outer">
          <ul class="bx-pager">
            <li class="pager-item" tal:repeat="item view/results">
              <div  class="image_block"
                    tal:condition="python:item.portal_type in ['Image', 'News Item']"
                    tal:attributes="style string:background-image:url(${item/getURL}/@@images/image/mini);">
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>

      <tal:x replace="structure string:&lt;script type='text/javascript'&gt;"></tal:x>
        $(document).ready(function() {
          $("#<tal:x replace="header"></tal:x>").contCarousel({
            });
        });

      <tal:x replace="structure string: &lt;/script&gt;" ></tal:x>

 </dl>