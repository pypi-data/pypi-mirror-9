<div metal:define-macro="file_vcs_params" tal:omit-tag=""
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal">
  <div class="vcsParams" tal:condition="not 'none' in storage['vcs_engine']">
    <div tal:condition="action != 'dup?'" tal:omit-tag="">
      ${form.grid_text('message', _('Message:'))}
    </div>
    <div class="formItem" tal:condition="not 'local' in storage['vcs_engine']">
      <label><em>${_('Credentials:')}</em></label>
      <div class="vcsUser">
        ${_('User:')} <input id="vcs_user" name="vcs_user" type="text" autocomplete="off"/> Â 
        ${_('Password:')} <input id="vcs_password" name="vcs_password" type="password" autocomplete="off"/>
        <input id="vcs_change" name="vcs_change" type="submit" value="${_('Change')}" class="button"/>
      </div>
    </div>
  </div>
</div>
