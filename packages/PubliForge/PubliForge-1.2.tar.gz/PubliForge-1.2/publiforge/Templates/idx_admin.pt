<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin(request.current_route_path(_anchor='current'), multipart=True)}
  <div id="main">
    <!-- ............................... Filter ........................... -->
    <div class="filter">
      <h3><span>${_('Indexer filter')}</span></h3>
      <div class="col11">
        ${form.grid_text('f_id', _('Identifier:'))}
        <div class="submit">${form.submit('filter', _('Apply filter'), class_='button')}</div>
      </div>
    </div>
    <!-- ............................. Flash .............................. -->
    <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"></div>
    <!-- ............................ Action list ......................... -->
    <h3 class="list">${_('Indexer List')}</h3>
    <div class="listActions">
      <div id="actionParams" tal:condition="action == 'imp?'">
        ${form.grid_upload('xml_file', _('Indexer file:'))}
        <div class="submit">
          ${form.submit('imp!.x', _('Import file'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </div>
      </div>
      <div class="first">${paging.pager_top('indexer22', _('Indexers'))}</div>
      <div class="last" tal:switch="i_manager and action == 'del?#'">Â 
        <span tal:case="True" tal:omit-tag="">
          ${form.submit('del!#.x', _('Confirm deletion'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </span>
        <span tal:case="False" tal:condition="action in ('', 'ccl!')" tal:omit-tag="">
          <span tal:condition="i_manager" tal:omit-tag="">
            ${form.button(route('indexer_create', _anchor='tab0'),
              title=_('Create indexer'), src='/Static/Images/action_create.png')}
            ${form.submit_image('imp?', _('Import indexers'),
              '/Static/Images/action_import.png')}
            ${paging.pipe()}
          </span>
          ${form.submit_image('exp!#', _('Export selected indexers'),
            '/Static/Images/action_export.png')}
          <span tal:condition="i_manager" tal:omit-tag="">
            ${paging.pipe()}
            ${form.submit_image('del?#', _('Delete selected indexers'),
              '/Static/Images/action_delete.png')}
          </span>
        </span>
      </div>
    </div>
    <!-- .............................. Indexers .......................... -->
    <div id="content">
      <table class="list">
        <caption>${_('Indexers')}</caption>
        <tr>
          <th class="checkbox" id="check_all"></th>
          <th>${_('Label')}</th>
          <th>${paging.sortable_column(_('Identifier'), 'indexer_id')}</th>
          <th>${paging.sortable_column(_('Type of value'), 'value_type')}</th>
          <th class="last">${_('Actions')}</th>
        </tr>
        <tr tal:repeat="indexer paging">
          <td class="checkbox">
            ${form.checkbox('#%s' % indexer.indexer_id, id=None, class_='listCheck')}
          </td>
          <td>
            <a href="${route('indexer_view', indexer_id=indexer.indexer_id)}">
              ${labels[indexer.indexer_id]}
            </a>
          </td>
          <td>
            <a href="${route('indexer_view', indexer_id=indexer.indexer_id)}">
              ${indexer.indexer_id}
            </a>
          </td>
          <td>${INDEX_VALUE_TYPES[indexer.value_type]}</td>
          <td class="last actions" tal:switch="i_manager and action == 'del?%s' % indexer.indexer_id">
            <span tal:case="True" id="current">
              ${form.submit('del!%s.x' % indexer.indexer_id, _('Confirm deletion'), class_='button')}
              ${form.submit_cancel(_('Cancel'))}
            </span>
            <span tal:case="False" tal:omit-tag="">
              <span tal:condition="i_editor" tal:omit-tag="">
                ${form.button(route('indexer_edit', indexer_id=indexer.indexer_id),
                  src='/Static/Images/action_edit_one.png', title=_('Edit settings'))}
              </span>
              ${form.submit_image('exp!%s' % indexer.indexer_id, _('Export indexer'),
                '/Static/Images/action_export_one.png')}
              <span tal:condition="i_manager" tal:omit-tag="">
                ${form.submit_image('del?%s' % indexer.indexer_id, _('Delete indexer'),
                  '/Static/Images/action_delete_one.png')}
              </span>
            </span>
          </td>
        </tr>
      </table>
    </div>
    <div class="listPager">
      <div class="first">${paging.pager_bottom('indexer', _('Indexers'))}</div>
      <div class="last">
        ${_('Lines per page:')} ${form.select('page_size', '', paging.page_sizes, True)}
      </div>
    </div>
  </div>
  ${form.end()}
</div>
</body>
</html>
