<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin(request.current_route_path(_query=paging and {'paging_id': paging.paging_id} or {}))}
  <!-- ............................... Buttons ............................ -->
  <div id="buttons">
    <div class="first">
      ${request.breadcrumbs.back_button()}
    </div>
    <div class="last" tal:switch="role is None">
      <div tal:case="True" tal:omit-tag="">
        ${form.submit('sav!.x', _('Create'), class_='buttonMain')}
        ${form.button(route('project_edit', project_id=project['project_id']), _('Cancel'))}
      </div>
      <div tal:case="False" tal:omit-tag="">
        ${form.submit('sav!.x', _('Save'), class_='buttonMain')}
        ${form.button(route('role_view', project_id=role.project_id, role_id=role.role_id), _('Cancel'))}
        ${form.button(route('project_%s' % ('edit' in request.breadcrumbs.back_path() and 'edit' or 'view'),
          project_id=role.project_id), _('View project settings'))}
      </div>
    </div>
    <hr class="hidden"/>
  </div>
  <div id="main">
    <h2 id="subtitle" class="role" title="${_('Role')}">
      ${project['label']} <em>${role and role.label}</em>
    </h2>
    <!-- ............................. Flash .............................. -->
    <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"/>
    <!-- ............................. Users to add ....................... -->
    <div tal:define="mbr_paging load: mbr_paging.macro.pt" metal:use-macro="mbr_paging"/>
    <!-- ................................ Tabs ............................ -->
    <div id="tabSet">
      ${tab_set.toc('tabRole')}
      <!-- ..... Description ...... -->
      ${tab_set.tab_begin(0, 'd')}
      ${form.grid_text('label', _('Label:'), required=True)}
      ${form.grid_text('description', _('Description:'))}
      ${tab_set.tab_end()}
      <!-- ...... Operators ....... -->
      ${tab_set.tab_begin(1, 'a')}
      <div tal:condition="role" tal:omit-tag="">
        <div class="listActions">
          <div class="first">
            <img src="/Static/Images/user22.png" alt="${_('Operators')}"/>
          </div>
          <div class="last">
            ${form.submit_image('aur?', _('Add user'), '/Static/Images/action_add.png')}
          </div>
        </div>
        <table class="list smallList">
          <caption>${_('Operators')}</caption>
          <tr>
            <th>${_('Name')}</th>
            <th>${_('Login')}</th>
            <th class="last">${_('Action')}</th>
          </tr>
          <tr tal:repeat="operator operators">
            <td><a href="${route('user_view', user_id=operator.user_id)}">${operator[2]}</a></td>
            <td><a href="${route('user_view', user_id=operator.user_id)}">${operator[1]}</a></td>
            <td class="last" tal:switch="action == 'rur?%d' % operator[0]">
              <span tal:case="True" tal:omit-tag="">
                ${form.submit('rur!%d.x' % operator[0], _('Confirm removal'), class_='button')}
                ${form.submit_cancel(_('Cancel'))}
              </span>
              <span tal:case="False" tal:omit-tag="">
                ${form.submit_image('rur?%d' % operator[0], _('Remove operator'),
                '/Static/Images/action_remove_one.png')}
              </span>
            </td>
          </tr>
        </table>
      </div>
      <div tal:condition="not role">${_('Create role before adding operators.')}</div>
      ${tab_set.tab_end()}
    </div>
  </div>
  ${form.end()}
</div>
</body>
</html>