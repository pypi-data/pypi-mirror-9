<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  <div id="main">
    <h2 id="subtitle" class="project" title="${_('Dashboard')}">${project['label']}</h2>
    <!-- .............................. Entries ........................... -->
    <div id="dashboard">
      <div class="dashboardEntry" style="width: ${100 / len(entries)}%;"
           tal:repeat="entry entries">
        <a href="${entry[1]}" class="dashboardEntry-${entry[0]}">
          <img src="/Static/Images/${entry[0]}72.png" alt="${entry[0]}"/>
        </a>
        <div>${entry[2]}</div>
      </div>
      <div class="clear"> </div>
    </div>
    <!-- ............................ Description ......................... -->
    <div id="descriptionProject"
         tal:condition="project['description'] or project['deadline']">
      <div class="description" tal:condition="project['description']">
        ${project['description']}
      </div>
      <div class="formItem" tal:condition="project['deadline']">
        <label><em>${_('Deadline:')}</em></label>
        <div id="deadline">${project['deadline'].strftime(_('%m/%d/%Y'))}</div>
      </div>
      <!-- <div class="formItem"> -->
      <!--   <label><em>${_('Documentation:')}</em></label> -->
      <!--   <div id="documentation"><a href="#">${_('Read...')}</a></div> -->
      <!-- </div> -->
    </div>
  </div>
</div>
</body>
</html>
