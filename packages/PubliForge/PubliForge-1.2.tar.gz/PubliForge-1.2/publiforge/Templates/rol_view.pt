<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin()}
  <!-- ............................... Buttons ............................ -->
  <div id="buttons">
    <div class="first">
      ${request.breadcrumbs.back_button()}
    </div>
    <div class="last" tal:condition="i_editor"> 
      ${form.button(route('role_edit', project_id=role.project_id, role_id=role.role_id),
        _('Edit'), class_='buttonMain')}
      ${form.button(route('project_%s' % ('edit' in request.breadcrumbs.back_path() and 'edit' or 'view'),
         project_id=role.project_id), _('View project settings'))}
    </div>
    <hr class="hidden"/>
  </div>
  <div id="main">
    <h2 id="subtitle" class="role" title="${_('Role')}">
      ${project['label']} <em>${role.label}</em>
    </h2>
    <!-- ................................ Tabs ............................ -->
    <div id="tabSet">
      ${tab_set.toc('tabRole')}
      <!-- ..... Description ...... -->
      ${tab_set.tab_begin(0, 'd')}
      ${form.grid_item(_('Label:'), role.label, class_='')}
      ${form.grid_item(_('Description:'), role.description, class_='')}
      ${tab_set.tab_end()}
      <!-- ........ Operators ....... -->
      ${tab_set.tab_begin(1, 'a')}
      <div class="listActions" tal:condition="operators">
        <div class="first"><img src="/Static/Images/user22.png" alt="${_('Operators')}"/></div>
        <div class="last"> </div>
      </div>
      <table class="list smallList" tal:condition="operators">
        <tr>
          <th>${_('Name')}</th>
          <th>${_('Login')}</th>
        </tr>
        <tr tal:repeat="operator operators">
          <td><a href="${route('user_view', user_id=operator[0])}">${operator[2]}</a></td>
          <td><a href="${route('user_view', user_id=operator[0])}">${operator[1]}</a></td>
        </tr>
      </table>
      <div tal:condition="not operators">${_('No operator.')}</div>
      ${tab_set.tab_end()}
    </div>
  </div>
  ${form.end()}
</div>
</body>
</html>
