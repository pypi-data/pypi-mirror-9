<div metal:define-macro="mbr_paging" tal:omit-tag=""
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
  <div id="dialogBox" tal:condition="paging is not None and paging.paging_id in ('users', 'operators')">
    <div id="dialogBoxTitle">
      <div class="first">${_('Users to add')}</div>
      <div class="last">
        ${form.submit_image('ccl!', _('Close'), '/Static/Images/close_light.png')}
      </div>
    </div>
    <div id="dialogBoxContent">
      <div class="filter col11">
        <div class="colFirst">
          ${form.grid_text('f_login', _('Login:'))}
          <div tal:condition="paging.paging_id == 'users'" tal:omit-tag="">
            ${form.grid_select('f_group', _('Group:'), [('', '')] + groups, autosubmit=True)}
          </div>
        </div>
        <div class="colLast">
          ${form.grid_text('f_name', _('Name:'))}
        </div>
        <div class="submit">${form.submit('filter', _('Apply filter'), class_='button')}</div>
      </div>
      <h3 class="list">${_('Users to add')}</h3>
      <div class="listActions">
        <div class="first">${paging.pager_top()}</div>
        <div class="last">
          ${form.submit('aur!#.x', _('Add users'))}
        </div>
      </div>
      <table class="list smallList">
        <caption>${_('Users')}</caption>
        <tr>
          <th class="checkbox" id="check_all"></th>
          <th>${paging.sortable_column(_('Name'), 'name')}</th>
          <th>${paging.sortable_column(_('Login'), 'login')}</th>
          <th class="last">${_('Actions')}</th>
        </tr>
        <tr tal:repeat="user paging">
          <td class="checkbox">${form.checkbox('#%d' % user.user_id, id=None, class_='listCheck')}</td>
          <td>${user.name}</td>
          <td>${user.login}</td>
          <td class="last actions">
            ${form.submit_image('aur!%d' % user.user_id, _('Add user'),
              '/Static/Images/action_add_one.png')}
          </td>
        </tr>
      </table>
      <div class="listPager">
        <div class="first">${paging.pager_bottom()}</div>
        <div class="last">
          ${_('Lines per page:')} ${form.select('page_size', '', paging.page_sizes, True)}
        </div>
      </div>
    </div>
  </div>
</div>
