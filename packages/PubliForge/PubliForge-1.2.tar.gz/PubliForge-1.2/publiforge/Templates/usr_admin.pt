<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin(request.current_route_path(_anchor='current'), multipart=True)}
  <div id="main">
    <!-- ............................... Filter ........................... -->
    <div  class="filter">
      <h3><span>${_('User filter')}</span></h3>
      <div class="col11">
        <div class="colFirst">
          ${form.grid_text('f_login', _('Login:'))}
          <div tal:condition="groups" tal:omit-tag="">
            ${form.grid_select('f_group', _('Group:'), [('', '')] + groups, autosubmit=True)}
          </div>
        </div>
        <div class="colLast">
          ${form.grid_text('f_name', _('Name:'))}
          ${form.grid_select('f_status', _('Status:'),
            [('*', '')] + USER_STATUS.items(), autosubmit=True)}
        </div>
        <div class="submit">${form.submit('filter', _('Apply filter'), class_='button')}</div>
      </div>
    </div>
    <!-- ............................. Flash .............................. -->
    <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"></div>
    <!-- ............................ Action list ......................... -->
    <h3 class="list">${_('User List')}</h3>
    <div class="listActions">
      <div id="actionParams" tal:condition="action == 'imp?'">
        ${form.grid_upload('xml_file', _('User file:'))}
        <div class="submit">
          ${form.submit('imp!.x', _('Import file'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </div>
      </div>
      <div class="first">${paging.pager_top('user22', _('Users'))}</div>
      <div class="last" tal:switch="i_manager and action == 'del?#'"> 
        <span tal:case="True" tal:omit-tag="">
          ${form.submit('del!#.x', _('Confirm deletion'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </span>
        <span tal:case="False" tal:condition="action in ('', 'ccl!')" tal:omit-tag=""> 
          <span tal:condition="i_manager" tal:omit-tag="">
            ${form.button(route('user_create', _anchor='tab0'),
              title=_('Create user'), src='/Static/Images/action_create.png')}
            ${form.submit_image('imp?', _('Import users'),
              '/Static/Images/action_import.png')}
            ${paging.pipe()}
          </span>
          ${form.submit_image('exp!#', _('Export selected users'),
            '/Static/Images/action_export.png')}
          <span tal:condition="i_manager" tal:omit-tag="">
            ${paging.pipe()}
            ${form.submit_image('del?#', _('Delete selected users'),
              '/Static/Images/action_delete.png')}
          </span>
        </span>
      </div>
    </div>
    <!-- ............................... Users ............................ -->
    <div id="content">
      <table class="list">
        <caption>${_('Users')}</caption>
        <tr>
          <th class="checkbox" id="check_all"></th>
          <th>${paging.sortable_column(_('Name'), 'name')}</th>
          <th>${paging.sortable_column(_('Login'), 'login')}</th>
          <th>${paging.sortable_column(_('Status'), 'status')}</th>
          <th class="last">${_('Actions')}</th>
        </tr>
        <tr tal:repeat="user paging">
          <td class="checkbox">
            ${form.checkbox('#%s' % user.user_id, id=None, class_='listCheck')}
          </td>
          <td><a href="${route('user_view', user_id=user.user_id)}">${user.name}</a></td>
          <td><a href="${route('user_view', user_id=user.user_id)}">${user.login}</a></td>
          <td>${USER_STATUS[user.status]}</td>
          <td class="last actions" tal:switch="i_manager and action == 'del?%d' % user.user_id">
            <span tal:case="True" id="current">
              ${form.submit('del!%d.x' % user.user_id, _('Confirm deletion'), class_='button')}
              ${form.submit_cancel(_('Cancel'))}
            </span>
            <span tal:case="False" tal:omit-tag="">
              <span tal:condition="i_editor" tal:omit-tag="">
                ${form.button(route('user_edit', user_id=user.user_id),
                  src='/Static/Images/action_edit_one.png', title=_('Edit settings'))}
              </span>
              ${form.submit_image('exp!%d' % user.user_id, _('Export user'),
                '/Static/Images/action_export_one.png')}
              <span tal:condition="i_manager" tal:omit-tag="">
                ${form.submit_image('del?%d' % user.user_id, _('Delete user'),
                  '/Static/Images/action_delete_one.png')}
              </span>
            </span>
          </td>
        </tr>
      </table>
    </div>
    <div class="listPager">
      <div class="first">${paging.pager_bottom('user', _('Users'))}</div>
      <div class="last">
        ${_('Lines per page:')} ${form.select('page_size', '', paging.page_sizes, True)}
      </div>
    </div>
  </div>
  ${form.end()}
</div>
</body>
</html>
