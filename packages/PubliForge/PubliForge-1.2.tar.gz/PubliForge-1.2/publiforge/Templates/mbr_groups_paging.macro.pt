<div metal:define-macro="mbr_groups_paging" tal:omit-tag=""
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
  <div id="dialogBox" tal:condition="paging is not None and paging.paging_id == 'groups'">
    <div id="dialogBoxTitle">
      <div class="first">${_('Groups to add')}</div>
      <div class="last">
        ${form.submit_image('ccl!', _('Close'), '/Static/Images/close_light.png')}
      </div>
    </div>
    <div id="dialogBoxContent">
      <div class="filter col11">
        ${form.grid_text('f_label', _('Label:'))}
        <div class="submit">${form.submit('filter', _('Apply filter'), class_='button')}</div>
      </div>
      <h3 class="list">${_('Groups to add')}</h3>
      <div class="listActions">
        <div class="first">${paging.pager_top()}</div>
        <div class="last">
          ${form.submit('agp!#.x', _('Add groups'))}
        </div>
      </div>
      <table class="list smallList">
        <caption>${_('Groups')}</caption>
        <tr>
          <th class="checkbox" id="check_all"></th>
          <th>${paging.sortable_column(_('Label'), 'label')}</th>
          <th>${_('Description')}</th>
          <th class="last">${_('Actions')}</th>
        </tr>
        <tr tal:repeat="group paging">
          <td class="checkbox">${form.checkbox('#%s' % group.group_id, id=None, class_='listCheck')}</td>
          <td>${group.label}</td>
          <td class="info">${group.description}</td>
          <td class="last actions">
            ${form.submit_image('agp!%s' % group.group_id, _('Add group'),
              '/Static/Images/action_add_one.png')}
          </td>
        </tr>
      </table>
      <div class="listPager">
        <div class="first">${paging.pager_bottom()}</div>
        <div class="last">
          ${_('Lines per page:')} ${form.select('page_size', '', paging.page_sizes, True)}
        </div>
      </div>
    </div>
  </div>
</div>
