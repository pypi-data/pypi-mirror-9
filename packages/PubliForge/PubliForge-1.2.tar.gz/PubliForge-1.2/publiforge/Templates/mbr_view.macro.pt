<div metal:define-macro="mbr_view" tal:omit-tag=""
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
  <div class="listActions">
    <div class="first">
      <img src="/Static/Images/user22.png" alt="${_('Members')}"/>
      <label>${_('Members')}</label>
    </div>
    <div class="last">Â </div>
  </div>
  <table class="list smallList" tal:condition="members">
    <caption>${_('Members')}</caption>
    <tr>
      <th>${_('Name')}</th>
      <th>${_('Login')}</th>
      <th>${_('Permission')}</th>
      <th tal:condition="PROJECT_ENTRIES">${_('Menu entries')}</th>
    </tr>
    <tr tal:repeat="member members">
      <td><a href="${route('user_view', user_id=member[0])}">${member[2]}</a></td>
      <td><a href="${route('user_view', user_id=member[0])}">${member[1]}</a></td>
      <td>${PERMS[member[3]]}</td>
      <td tal:condition="PROJECT_ENTRIES">${PROJECT_ENTRIES[member[4]]}</td>
    </tr>
  </table>
</div>
