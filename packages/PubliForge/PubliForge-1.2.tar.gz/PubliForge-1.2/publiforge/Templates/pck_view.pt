<?xml version="1.0" encoding="utf-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin()}
  <!-- ............................... Buttons ............................ -->
  <div id="buttons">
    <div class="first">
      ${request.breadcrumbs.back_button()}
    </div>
    <div class="last">
      <span tal:condition="i_packmaker">
        ${form.button(route('pack_edit', project_id=pack.project_id, pack_id=pack.pack_id),
          _('Edit'), class_='buttonMain')}
      </span>
      ${form.submit('exp!.x', _('Export'))}
      ${form.button(route('project_dashboard', project_id=project['project_id']),
        _('View dashboard'))}
    </div>
    <hr class="hidden"/>
  </div>
  <div id="main">
    <h2 id="subtitle" class="pack" title="${_('Pack')}">
      ${project['label']} <em>${pack.label}</em>
    </h2>
    <!-- ................................ Tabs ............................ -->
    <div id="tabSet" tal:define="file_types ('file', 'resource', 'template') ; i_am 'pack'">
      ${tab_set.toc('tabPack')}
      <!-- ..... Description ...... -->
      ${tab_set.tab_begin(0, 'd')}
      ${form.grid_item(_('Pack:'), pack.label, class_='')}
      ${form.grid_item(_('Description:'), pack.description, class_='')}
      <div class="formItem" tal:condition="pack.recursive">
        <label><em>${_('Recursive:')}</em></label>
        <div id="recursive"><img src="/Static/Images/check.png" alt="X"/></div>
      </div>
      <div class="formItem" tal:condition="pack.updated != pack.created">
        <label><em>${_('Update:')}</em></label>
        <div id="updated" title="${pack.updated.isoformat(' ').partition('.')[0]}">
          ${age(pack.updated)}
        </div>
      </div>
      <div class="formItem">
        <label><em>${_('Creation:')}</em></label>
        <div id="created" title="${pack.created.isoformat(' ').partition('.')[0]}">
          ${age(pack.created)}
        </div>
      </div>
      ${tab_set.tab_end()}
      <!-- ......... Files ........ -->
      ${tab_set.tab_begin(1, 'f')}
      <div tal:define="files_view load: files_view.macro.pt" metal:use-macro="files_view"/>
      ${tab_set.tab_end()}
      <!-- .......... Note ........ -->
      ${tab_set.tab_begin(2, 'n')}
      <div class="note">${note}</div>
      ${tab_set.tab_end()}
      <!-- .......... Task ........ -->
      ${tab_set.tab_begin(3, 't')}
      <div tal:switch="pack.task_id is None" tal:omit-tag="">
        <div tal:case="False" tal:omit-tag="">
          ${form.grid_item(_('Current task:'),
            project['task_labels'][pack.task_id], class_='')}
          ${form.grid_item(_('Operator:'), operator, class_='')}
        </div>
        <div tal:case="True" tal:omit-tag="">
          ${_('No current task.')}
        </div>
      </div>
      ${tab_set.tab_end()}
      <!-- ........ History ....... -->
      ${tab_set.tab_begin(4, 'h')}
      <div tal:define="pck_events load: pck_events.macro.pt" metal:use-macro="pck_events"/>
      ${tab_set.tab_end()}
     </div>
  </div>
  ${form.end()}
</div>
</body>
</html>
