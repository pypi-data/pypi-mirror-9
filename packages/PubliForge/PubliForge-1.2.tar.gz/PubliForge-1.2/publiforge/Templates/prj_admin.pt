<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin(request.current_route_path(_anchor='current'), multipart=True)}
  <div id="main">
    <!-- ............................... Filter ........................... -->
    <div class="filter">
      <h3><span>${_('Project filter')}</span></h3>
      <div class="col11">
        <div class="colFirst">
          ${form.grid_text('f_label', _('Label:'))}
          ${form.grid_text('f_login', _('User:'))}
        </div>
        <div class="colLast">
          ${form.grid_select('f_status', _('Status:'), [('*', '')] + project_status.items(), autosubmit=True)}
          <div tal:condition="groups" tal:omit-tag="">
            ${form.grid_select('f_group', _('Group:'), [('', '')] + groups, autosubmit=True)}
          </div>
        </div>
        <div class="submit">${form.submit('filter', _('Apply filter'), class_='button')}</div>
      </div>
    </div>
    <!-- ............................. Flash .............................. -->
    <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"></div>
    <!-- ............................ Action list ......................... -->
    <h3 class="list">${_('Project List')}</h3>
    <div class="listActions">
      <div id="actionParams" tal:condition="action == 'imp?'">
        ${form.grid_upload('xml_file', _('Project file:'))}
        <div class="submit">
          ${form.submit('imp!.x', _('Import file'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </div>
      </div>
      <div class="first">${paging.pager_top('project22', _('Projects'))}</div>
      <div class="last" tal:switch="i_manager and action == 'del?#'">Â 
        <span tal:case="True" tal:omit-tag="">
          ${form.submit('del!#.x', _('Confirm deletion'), class_='button')}
          ${form.submit_cancel(_('Cancel'))}
        </span>
        <span tal:case="False" tal:condition="action in ('', 'ccl!')" tal:omit-tag="">
          <span tal:condition="i_manager" tal:omit-tag="">
            ${form.button(route('project_create', _anchor='tab0'),
              title=_('Create project'), src='/Static/Images/action_create.png')}
            ${form.submit_image('imp?', _('Import projects'),
              '/Static/Images/action_import.png')}
            ${paging.pipe()}
          </span>
          ${form.submit_image('exp!#', _('Export selected projects'),
            '/Static/Images/action_export.png')}
          <span tal:condition="i_manager" tal:omit-tag="">
            ${paging.pipe()}
            ${form.submit_image('del?#', _('Delete selected projects'),
              '/Static/Images/action_delete.png')}
          </span>
        </span>
      </div>
    </div>
    <!-- ............................. Projects ........................... -->
    <div id="content">
      <table class="list">
        <caption>${_('Projects')}</caption>
        <tr>
          <th class="checkbox" id="check_all"></th>
          <th>${paging.sortable_column(_('Label'), 'label')}</th>
          <th>${_('Description')}</th>
          <th>${paging.sortable_column(_('Status'), 'status')}</th>
          <th>${paging.sortable_column(_('Deadline'), 'deadline')}</th>
          <th class="last">${_('Actions')}</th>
        </tr>
        <tr tal:repeat="project paging">
          <td class="checkbox">
            ${form.checkbox('#%s' % project.project_id, id=None, class_='listCheck')}
          </td>
          <td>
            <a href="${route('project_view', project_id=project.project_id)}">${project.label}</a>
          </td>
          <td class="info">${project.description}</td>
          <td>${project_status[project.status]}</td>
          <td>${project.deadline and project.deadline.strftime(_('%m/%d/%Y')) or ''}</td>
          <td class="last actions" tal:switch="i_manager and action == 'del?%d' % project.project_id">
            <span tal:case="True" id="current">
              ${form.submit('del!%d.x' % project.project_id, _('Confirm deletion'), class_='button')}
              ${form.submit_cancel(_('Cancel'))}
            </span>
            <span tal:case="False" tal:omit-tag="">
              ${form.button(route('project_dashboard', project_id=project.project_id),
                src='/Static/Images/action_dashboard_one.png', title=_('View dashboard'))}
              <span tal:condition="i_editor" tal:omit-tag="">
                ${form.button(route('project_edit', project_id=project.project_id),
                  src='/Static/Images/action_edit_one.png', title=_('Edit settings'))}
              </span>
              ${form.submit_image('exp!%d' % project.project_id, _('Export project'),
                '/Static/Images/action_export_one.png')}
              <span tal:condition="i_manager" tal:omit-tag="">
                ${form.submit_image('del?%d' % project.project_id, _('Delete project'),
                  '/Static/Images/action_delete_one.png')}
              </span>
            </span>
          </td>
        </tr>
      </table>
    </div>
    <div class="listPager">
      <div class="first">${paging.pager_bottom('project', _('Projects'))}</div>
      <div class="last">
        ${_('Lines per page:')} ${form.select('page_size', '', paging.page_sizes, True)}
      </div>
    </div>
  </div>
  ${form.end()}
</div>
</body>
</html>
