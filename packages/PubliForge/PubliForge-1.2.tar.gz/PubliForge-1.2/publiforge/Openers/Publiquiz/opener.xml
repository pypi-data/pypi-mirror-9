<publiforge version="1.0">
  <opener>

    <label xml:lang="en">Publiquiz XML</label>
    <label xml:lang="fr">XML Publiquiz</label>

    <description xml:lang="en">
      Display and edit a Publiquiz XML file.
    </description>
    <description xml:lang="fr">
      Affiche et édite un fichier XML Publiquiz.
    </description>

    <module>publiforge.lib.opener.xml</module>

    <ancestors>
      <ancestor>Publidoc</ancestor>
    </ancestors>
    
    <imports>
      <import to="RelaxNG/publiquiz.rng">
        ../../Processors/PublidocValid/RelaxNG/publiquiz.rng
      </import>
      <import to="Xsl">
        ../../Processors/Publiquiz2Html5/Xsl
      </import>
      <import to="Static/Css">
        ../../Processors/Publiquiz2Html5/Templates/Css
      </import>
      <import to="Static/Js">
        ../../Processors/Publiquiz2Html5/Templates/Js
      </import>
    </imports>

    <seeds>
      <seed>
        <file>Seeds/publiquiz_choices-radio.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Choices radio</label>
        <label xml:lang="fr">XML Publiquiz ‒ QCU (radio)</label>
      </seed>

      <seed>
        <file>Seeds/publiquiz_choices-check.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Choices check</label>
        <label xml:lang="fr">XML Publiquiz ‒ QCM (check)</label>
      </seed>

      <seed>
        <file>Seeds/publiquiz_blanks-fill.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Blanks fill</label>
        <label xml:lang="fr">XML Publiquiz ‒ Exercice à trous libre</label>
      </seed>

      <seed>
        <file>Seeds/publiquiz_blanks-select.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Blanks select</label>
        <label xml:lang="fr">XML Publiquiz ‒ Exercice à trous guidé</label>
      </seed>

      <seed>
        <file>Seeds/publiquiz_pointing.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Pointing</label>
        <label xml:lang="fr">XML Publiquiz ‒ Pointage</label>
      </seed>

      <seed>
        <file>Seeds/publiquiz_pointing-categories.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Pointing with categories</label>
        <label xml:lang="fr">XML Publiquiz ‒ Pointage avec catégories</label>
      </seed>
 
      <seed>
        <file>Seeds/publiquiz_matching.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Matching</label>
        <label xml:lang="fr">XML Publiquiz ‒ Appariement</label>
      </seed>
 
      <seed>
        <file>Seeds/publiquiz_sort.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Sort</label>
        <label xml:lang="fr">XML Publiquiz ‒ Tri</label>
      </seed>
 
      <seed>
        <file>Seeds/publiquiz_categories.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Categories</label>
        <label xml:lang="fr">XML Publiquiz ‒ Catégories</label>
      </seed>
 
      <seed>
        <file>Seeds/publiquiz_production.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Production</label>
        <label xml:lang="fr">XML Publiquiz ‒ Production</label>
      </seed>
 
      <seed>
        <file>Seeds/publiquiz_composite.xml</file>
        <label xml:lang="en">Publiquiz XML ‒ Composite</label>
        <label xml:lang="fr">XML Publiquiz ‒ Composite</label>
      </seed>
    </seeds>

    <variables>
      <group-file>Variables/publiquiz.pfvar.xml</group-file>
    </variables>

    <public>Static</public>

  </opener>
</publiforge>
