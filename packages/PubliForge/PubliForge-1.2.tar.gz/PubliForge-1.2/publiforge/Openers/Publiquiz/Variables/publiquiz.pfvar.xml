<publiforge version="1.0">
  <variables>
    <!-- ============================== Head ============================== -->
    <group name="head">
      <label xml:lang="en">Head</label>
      <label xml:lang="fr">En-tête</label>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~ Attributes ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="id" type="regex" cast="attribute">
        <pattern>[a-z0-9_-]{2,}</pattern>
        <label xml:lang="en">ID</label>
        <label xml:lang="fr">ID</label>
        <description xml:lang="en">
          2 or more, lower case letters, digits, - or  _.
        </description>
        <description xml:lang="fr">
          2 ou plus, lettres minuscules, chiffres, - or  _.
        </description>
      </var>

      <var name="type" type="regex" cast="attribute">
        <pattern>([a-z0-9_-]{2,})?</pattern>
        <label xml:lang="en">Type</label>
        <label xml:lang="fr">Type</label>
      </var>
      
      <var name="xml:lang" type="regex" cast="attribute">
        <pattern>[a-z]{2}(-[A-Z]{2})?</pattern>
        <label xml:lang="en">Language</label>
        <label xml:lang="fr">Langue</label>
        <description xml:lang="en">
          Language code such as "en", "fr" or "fr-FR".
        </description>
        <description xml:lang="fr">
          Code de langue tel que « en », « fr » or « fr-FR ».
        </description>
      </var>
      
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~ Elements ~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="title" type="string" cast="inline" class="editor">
        <label xml:lang="en">Title</label>
        <label xml:lang="fr">Titre</label>
      </var>

      <var name="shorttitle" type="string" cast="inline" class="editor">
        <label xml:lang="en">Short title</label>
        <label xml:lang="fr">Titre court</label>
      </var>

      <var name="subtitle" type="string" cast="inline" class="editor">
        <label xml:lang="en">Subtitle</label>
        <label xml:lang="fr">Sous-titre</label>
      </var>

      <var name="copyright" type="string" cast="simple_inline" class="editor">
        <label xml:lang="en">Copyright</label>
        <label xml:lang="fr">Copyright</label>
      </var>

      <var name="contributors" type="text" cast="contributors" class="editor"
           rows="2">
        <label xml:lang="en">Contributors</label>
        <label xml:lang="fr">Contributeurs</label>
      </var>

      <var name="keywordset" type="text" cast="keywordset" class="editor"
           rows="2">
        <label xml:lang="en">Keywords</label>
        <label xml:lang="fr">Mots clés</label>
      </var>

      <var name="subjectset" type="text" cast="subjectset" class="editor"
           rows="2">
        <label xml:lang="en">Subjects</label>
        <label xml:lang="fr">Thèmes</label>
      </var>

      <var name="annotation" type="text" cast="inline" class="editor"
           rows="2">
        <label xml:lang="en">Annotation</label>
        <label xml:lang="fr">Annotation</label>
      </var>
    </group>

    
    <!-- ============================= Corpus ============================= -->
    <group name="document">
      <label xml:lang="en">Corpus</label>
      <label xml:lang="fr">Corpus</label>

      <var name="document" type="text" cast="division" class="editor"
           rows="30">
        <label xml:lang="en">Document</label>
        <label xml:lang="fr">Document</label>
      </var>
    </group>

    <group name="topic">
      <label xml:lang="en">Corpus</label>
      <label xml:lang="fr">Corpus</label>

      <var name="topic" type="text" cast="section" class="editor" rows="30">
        <label xml:lang="en">Topic</label>
        <label xml:lang="fr">Topic</label>
      </var>
    </group>

    <group name="quiz">
      <label xml:lang="en">Corpus</label>
      <label xml:lang="fr">Corpus</label>
      
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ Instructions ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="instructions" type="text" cast="instructions" class="editor"
           rows="6">
        <label xml:lang="en">Instructions</label>
        <label xml:lang="fr">Instruction</label>
      </var>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Engines ~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="choices-radio" type="text" cast="choices-radio"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: SCQ</label>
        <label xml:lang="fr">Partie interactive : QCU</label>
      </var>

      <var name="choices-check" type="text" cast="choices-check"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: MCQ</label>
        <label xml:lang="fr">Partie interactive : QCM</label>
      </var>
      
      <var name="blanks-fill" type="text" cast="blanks-fill"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: blank fill</label>
        <label xml:lang="fr">Partie interactive : exercice à trous libre</label>
      </var>
      
      <var name="blanks-select" type="text" cast="blanks-select"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: blanks select</label>
        <label xml:lang="fr">Partie interactive : exercice à trous guidé</label>
      </var>

      <var name="blanks-char" type="text" cast="blanks-char"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: blanks char</label>
        <label xml:lang="fr">Partie interactive : insertion de caractère</label>
      </var>

      <var name="pointing" type="text" cast="pointing"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: pointing</label>
        <label xml:lang="fr">Partie interactive : pointage</label>
      </var>
      
      <var name="pointing-categories" type="text" cast="pointing-categories"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: pointing with categories</label>
        <label xml:lang="fr">Partie interactive : pointage avec catégories</label>
      </var>
      
      <var name="matching" type="text" cast="matching"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: matching</label>
        <label xml:lang="fr">Partie interactive : appariement</label>
      </var>
      
      <var name="sort" type="text" cast="sort"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: sort</label>
        <label xml:lang="fr">Partie interactive : tri</label>
      </var>
      
      <var name="categories" type="text" cast="categories"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: categories</label>
        <label xml:lang="fr">Partie interactive : catégories</label>
      </var>
      
      <var name="pip" type="text" cast="pip"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: pictures in picture</label>
        <label xml:lang="fr">Partie interactive : images dans image</label>
      </var>
      
      <var name="composite" type="text" cast="composite"
           class="editor" rows="6">
        <label xml:lang="en">Interactive part: composite</label>
        <label xml:lang="fr">Partie interactive : composite</label>
      </var>
      
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Help ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="help" type="text" cast="help" class="editor" rows="4">
        <label xml:lang="en">Help</label>
        <label xml:lang="fr">Aide</label>
      </var>
      
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Answer ~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <var name="answer" type="text" cast="answer" class="editor" rows="4">
        <label xml:lang="en">Answer</label>
        <label xml:lang="fr">Corrigé</label>
      </var>
    </group>

  </variables>
</publiforge>
