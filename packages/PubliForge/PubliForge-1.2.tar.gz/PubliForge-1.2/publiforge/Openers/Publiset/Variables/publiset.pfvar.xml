<publiforge version="1.0">
  <variables>

    <!-- ========================= Composition head ======================= -->
    <group name="composition_head">
      <label xml:lang="en">Composition head</label>
      <label xml:lang="fr">En-tête de composition</label>

      <var name="id" type="regex" cast="attribute">
        <pattern>[a-z0-9_-]{2,}</pattern>
        <label xml:lang="en">ID</label>
        <description xml:lang="en">
          2 or more, lower case letters, digits, - or  _.
        </description>
        <description xml:lang="fr">
          2 ou plus, lettres minuscules, chiffres, - or  _.
        </description>
      </var>

      <var name="xml:lang" type="regex" cast="attribute">
        <pattern>[a-z]{2}(-[A-Z]{2})?</pattern>
        <label xml:lang="en">xml:lang</label>
        <description xml:lang="en">
          Language code such as "en", "fr" or "fr-FR".
        </description>
        <description xml:lang="fr">
          Code de langue tel que « en », « fr » or « fr-FR ».
        </description>
      </var>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">path</label>
      </var>

      <var name="pi-source" type="boolean" cast="attribute">
        <label xml:lang="en">PI source</label>
        <description xml:lang="en">
          Insert before each file content a processing instruction (PI)
          "source" with the relative path of the file.
        </description>
        <description xml:lang="fr">
          Insère avant chaque contenu de fichier une instruction de traitement
          (PI) « source » avec le chemin relatif du fichier.
        </description>
      </var>

      <var name="xpath" type="string" cast="attribute">
        <label xml:lang="en">xpath</label>
        <description xml:lang="en">XPath and XSLT are exlusive.</description>
        <description xml:lang="fr">XPath et XSLT sont exclusifs</description>
      </var>

      <var name="xslt" type="string" cast="attribute">
        <label xml:lang="en">xslt</label>
        <description xml:lang="en">XPath and XSLT are exlusive.</description>
        <description xml:lang="fr">XPath et XSLT sont exclusifs</description>
      </var>

      <var name="as" type="string" cast="attribute">
        <label xml:lang="en">as</label>
      </var>

      <var name="attributes" type="string" cast="attribute">
        <label xml:lang="en">attributes</label>
      </var>

      <var name="transform" type="string" cast="attribute">
        <label xml:lang="en">transform</label>
        <description xml:lang="en">
          Tag name and transformation are exlusive.
        </description>
        <description xml:lang="fr">
          Nom de balise et transformation sont exclusifs.
        </description>
      </var>
    </group>

    <!-- ======================= Composition head head ==================== -->
    <group name="composition_head_head">
      <label xml:lang="en">Composition head [head]</label>
      <label xml:lang="fr">En-tête de composition [en-tête]</label>

      <var name="head_as" type="string" cast="attribute">
        <label xml:lang="en">head/as</label>
      </var>

      <var name="head_attributes" type="string" cast="attribute">
        <label xml:lang="en">head/attributes</label>
      </var>

      <var name="head_transform" type="string" cast="attribute">
        <label xml:lang="en">head/transform</label>
        <description xml:lang="en">
          Tag name and transformation are exlusive.
        </description>
        <description xml:lang="fr">
          Nom de balise et transformation sont exclusifs.
        </description>
      </var>
    </group>

    <!-- ==================== Composition division head =================== -->
    <group name="composition_division_head">
      <label xml:lang="en">Composition division head</label>
      <label xml:lang="fr">En-tête de division de composition</label>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">path</label>
      </var>

      <var name="xpath" type="string" cast="attribute">
        <label xml:lang="en">xpath</label>
        <description xml:lang="en">XPath and XSLT are exlusive.</description>
        <description xml:lang="fr">XPath et XSLT sont exclusifs</description>
      </var>

      <var name="xslt" type="string" cast="attribute">
        <label xml:lang="en">xslt</label>
        <description xml:lang="en">XPath and XSLT are exlusive.</description>
        <description xml:lang="fr">XPath et XSLT sont exclusifs</description>
      </var>

      <var name="as" type="string" cast="attribute">
        <label xml:lang="en">as</label>
      </var>

      <var name="attributes" type="string" cast="attribute">
        <label xml:lang="en">attributes</label>
      </var>

      <var name="transform" type="string" cast="attribute">
        <label xml:lang="en">transform</label>
        <description xml:lang="en">
          Tag name and transformation are exlusive.
        </description>
        <description xml:lang="fr">
          Nom de balise et transformation sont exclusifs.
        </description>
      </var>
    </group>

    <!-- ========================= Selection head ========================= -->
    <group name="selection_head">
      <label xml:lang="en">Selection head</label>
      <label xml:lang="fr">En-tête de sélection</label>

      <var name="id" type="regex" cast="attribute">
        <pattern>[a-z0-9_-]{2,}</pattern>
        <label xml:lang="en">ID</label>
        <description xml:lang="en">
          2 or more, lower case letters, digits, - or  _.
        </description>
        <description xml:lang="fr">
          2 ou plus, lettres minuscules, chiffres, - or  _.
        </description>
      </var>

      <var name="xml:lang" type="regex" cast="attribute">
        <pattern>[a-z]{2}(-[A-Z]{2})?</pattern>
        <label xml:lang="en">xml:lang</label>
        <description xml:lang="en">
          Language code such as "en", "fr" or "fr-FR".
        </description>
        <description xml:lang="fr">
          Code de langue tel que « en », « fr » or « fr-FR ».
        </description>
      </var>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">path</label>
      </var>
    </group>

    <!-- ===================== Selection division head ==================== -->
    <group name="selection_division_head">
      <label xml:lang="en">Composition division head</label>
      <label xml:lang="fr">En-tête de division de sélection</label>

      <var name="path" type="string" cast="attribute">
        <label xml:lang="en">path</label>
      </var>
    </group>

    <!-- =========================== Common head ========================== -->
    <group name="common_head">
      <label xml:lang="en">Common head</label>
      <label xml:lang="fr">En-tête commune</label>

      <var name="title" type="string" cast="inline">
        <label xml:lang="en">Title</label>
        <label xml:lang="fr">Titre</label>
      </var>

      <var name="shorttitle" type="string" cast="inline">
        <label xml:lang="en">Short title</label>
        <label xml:lang="fr">Titre court</label>
      </var>

      <var name="subtitle" type="string" cast="inline">
        <label xml:lang="en">Subtitle</label>
        <label xml:lang="fr">Sous-titre</label>
      </var>

      <var name="identifier_ean" type="regex">
        <pattern>(\d{13})?</pattern>
        <label xml:lang="en">EAN identifier</label>
        <label xml:lang="fr">Identifiant EAN</label>
        <description xml:lang="en">13 digits.</description>
        <description xml:lang="fr">13 chiffres.</description>
      </var>

      <var name="identifier_uri" type="string">
        <label xml:lang="en">URI identifier</label>
        <label xml:lang="fr">Identifiant URI</label>
      </var>

      <var name="copyright" type="string" cast="simple_inline" class="editor">
        <label xml:lang="en">Copyright</label>
        <label xml:lang="fr">Copyright</label>
      </var>

      <var name="collection" type="string" cast="simple_inline" class="editor">
        <label xml:lang="en">Collection</label>
        <label xml:lang="fr">Collection</label>
      </var>

      <var name="contributors" type="text" cast="contributors" class="editor"
           rows="2">
        <label xml:lang="en">Contributors</label>
        <label xml:lang="fr">Contributeurs</label>
      </var>

      <var name="date" type="regex">
        <pattern>(\d{4}(-\d{2}(-\d{2})?)?)?</pattern>
        <label xml:lang="en">Date</label>
        <label xml:lang="fr">Date</label>
        <description xml:lang="en">ISO format: YYYY-MM-DD.</description>
        <description xml:lang="fr">Format ISO : AAAA-MM-JJ.</description>
      </var>

      <var name="source_book" type="text" cast="source_book" class="editor"
           rows="2">
        <label xml:lang="en">Book source</label>
        <label xml:lang="fr">Source livre</label>
      </var>

      <var name="keywordset" type="text" cast="keywordset" class="editor"
           rows="2">
        <label xml:lang="en">Keywords</label>
        <label xml:lang="fr">Mots clés</label>
      </var>

      <var name="subjectset" type="text" cast="subjectset" class="editor"
           rows="2">
        <label xml:lang="en">Subjects</label>
        <label xml:lang="fr">Thèmes</label>
      </var>

      <var name="abstract" type="text" cast="abstract" class="editor"
           rows="5">
        <label xml:lang="en">Abstract</label>
        <label xml:lang="fr">Résumé</label>
      </var>

      <var name="cover" type="regex">
        <pattern>([a-zA-Z0-9_-]+)?</pattern>
        <label xml:lang="en">Cover</label>
        <label xml:lang="fr">Couverture</label>
        <description xml:lang="en">
          ID of cover image (without extension).
        </description>
        <description xml:lang="fr">
          Identifiant de l'image de couverture (sans extension).
        </description>
      </var>
    </group>

    <!-- ============================ Corpus ============================== -->
    <group name="corpus">
      <label xml:lang="en">Corpus</label>
      <label xml:lang="fr">Corpus</label>

      <var name="corpus" type="text" class="editor" cast="section"
           rows="30">
        <label xml:lang="en">Corpus</label>
        <label xml:lang="fr">Corpus</label>
      </var>
    </group>
  </variables>
</publiforge>
