<publiforge version="1.0">
  <processor>

    <label xml:lang="en">Publidoc XML to ePub 2</label>
    <label xml:lang="fr">XML Publidoc vers ePub 2</label>

    <description xml:lang="en">
      Convert a Publidoc XML document into a ePub 2 file and check the result.
    </description>
    <description xml:lang="fr">
      Convertit un document XML Publidoc en un fichier ePub 2 et vérifie le
      résultat.
    </description>

    <module>publiforge.lib.processor.leprisme</module>

    <ancestors>
      <ancestor>Publidoc2XHtml</ancestor>
    </ancestors>

    <variables>
      <group-file>Variables/publidoc2epub2_module.pfvar.xml</group-file>
      <group-file>../Publidoc2XHtml/Variables/publidoc2xhtml_image.pfvar.xml</group-file>
      <group-file>../Publidoc2XHtml/Variables/publidoc2xhtml_misc.pfvar.xml</group-file>
      <group-file>Variables/publidoc2epub2.pfvar.xml</group-file>
    </variables>

    <output>Result/ePub2</output>

  </processor>
</publiforge>
