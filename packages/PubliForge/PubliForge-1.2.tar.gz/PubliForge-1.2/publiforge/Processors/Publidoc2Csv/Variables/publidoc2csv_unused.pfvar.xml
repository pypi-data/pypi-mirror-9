<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: publidoc2csv_unused.pfvar.xml 10f45da8a62d 2014/09/07 17:53:02 Patrick $ -->
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Unused variables</label>
      <label xml:lang="fr">Variables inutilisées</label>

      <var name="published" type="boolean" visible="true">
        <default>true</default>
        <label xml:lang="en">Published (boolean)</label>
        <label xml:lang="fr">Publié (booléen)</label>
        <description xml:lang="en">
          checked = made and published --
          not checked = made but not published
        </description>
        <description xml:lang="fr">
          coché = fabriqué et publié --
          non coché = fabriqué mais non publié
        </description>
      </var>

      <var name="number" type="integer" visible="true">
        <default>1</default>
        <label xml:lang="en">Number (integer)</label>
        <label xml:lang="fr">Numéro (entier)</label>
      </var>

      <var name="format" type="select" visible="true">
        <default>.csv</default>
        <option value=".txt">TXT</option>
        <option value=".csv">CSV</option>
        <option value=".raw">RAW</option>
        <label xml:lang="en">Format (closed list)</label>
        <label xml:lang="fr">Format (liste fermée)</label>
      </var>

      <var name="temperature" type="regex" visible="true">
        <default>18 °C</default>
        <pattern>(\d+ °C|\d+ °F)</pattern>
        <label xml:lang="en">Temperature (regular expression)</label>
        <label xml:lang="fr">Température (expression rationnelle)</label>
      </var>

      <var name="title" type="string" visible="true">
        <default>Test…</default>
        <label xml:lang="en">Title (string)</label>
        <label xml:lang="fr">Titre (chaîne de caractères)</label>
      </var>

      <var name="summary" type="text" visible="true">
        <default>To be or not to be?</default>
        <label xml:lang="en">Abstract (text)</label>
        <label xml:lang="fr">Résumé (texte)</label>
      </var>
    </group>
  </variables>
</publiforge>
