<publiforge version="1.0">
  <variables>
    <!-- ==================== LePrisme module variables =================== -->
    <group>
      <label xml:lang="en">LePrisme module</label>
      <label xml:lang="fr">Module LePrisme</label>

      <var name="subdir" type="string">
        <label xml:lang="en">Output directory</label>
        <label xml:lang="fr">Chemin de sortie</label>
        <description xml:lang="en">
          Relative path inside output directory. --
          %(fid)s = file ID --
          %(path)s = relative path of the source file inside the storage
        </description>
        <description xml:lang="fr">
          Chemin relatif dans le répertoire de sortie. --
          %(fid)s = identifiant du fichier --
          %(path)s = chemin relatif du fichier source dans l'espace de stockage
        </description>
      </var>

      <var name="keeptmp" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">Keep temporary files</label>
        <label xml:lang="fr">Temporaires conservés</label>
      </var>
    </group>

    <!-- ===================== Processor step variables =================== -->
    <group>
      <label xml:lang="en">Conditional step</label>
      <label xml:lang="fr">Étapes conditionnelles</label>

      <var name="step2" type="boolean" visible="true">
        <default>true</default>
        <label xml:lang="en">Step 2 of the processing</label>
        <label xml:lang="fr">Étape 2 du traitement</label>
      </var>
    </group>
  </variables>
</publiforge>
