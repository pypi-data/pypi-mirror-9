<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Dimensions</label>
      <label xml:lang="fr">Dimensions</label>

      <var name="paper_size" type="select">
        <default>a4paper</default>
        <option value="a3paper">A3</option>
        <option value="a4paper">A4</option>
        <option value="a5paper">A5</option>
        <option value="b3paper">B3</option>
        <option value="b4paper">B4</option>
        <option value="b5paper">B5</option>
        <option value="c3paper">C3</option>
        <option value="c4paper">C4</option>
        <option value="c5paper">C5</option>
        <option value="letterpaper">Letter paper</option>
        <label xml:lang="en">Paper size</label>
        <label xml:lang="fr">Taille du papier</label>
      </var>

      <var name="layout_width" type="regex">
        <default>170</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Page width (mm)</label>
        <label xml:lang="fr">Largeur de la page (mm)</label>
      </var>

      <var name="layout_height" type="regex">
        <default>260</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Page height (mm)</label>
        <label xml:lang="fr">Hauteur de la page (mm)</label>
      </var>

      <var name="layout_offset" type="regex">
        <default>20</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Page offset in paper (mm)</label>
        <label xml:lang="fr">Décalage de la page dans le papier (mm)</label>
      </var>

      <var name="body_width" type="regex">
        <default>140</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Body width (mm)</label>
        <label xml:lang="fr">Largeur du corps (mm)</label>
      </var>

      <var name="body_height" type="regex">
        <default>230</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Body height (mm)</label>
        <label xml:lang="fr">Hauteur du corps (mm)</label>
      </var>

      <var name="margin_left" type="regex">
        <default>15</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Left or inner margin (mm)</label>
        <label xml:lang="fr">Marge gauche ou intérieure (mm)</label>
      </var>

      <var name="margin_top" type="regex">
        <default>17</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Top margin (mm)</label>
        <label xml:lang="fr">Marge haut de page (mm)</label>
      </var>

      <var name="bindingoffset" type="regex">
        <default>0</default>
        <pattern>\d{1,2}(\.\d)?</pattern>
        <label xml:lang="en">Offset between left and right (mm)</label>
        <label xml:lang="fr">Décalage entre gauche et droite (mm)</label>
      </var>

      <var name="headsep" type="regex">
        <default>10</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Height between body and header (mm)</label>
        <label xml:lang="fr">Hauteur entre corps et en-tête (mm)</label>
      </var>

      <var name="footskip" type="regex">
        <default>10</default>
        <pattern>\d{1,3}(\.\d)?</pattern>
        <label xml:lang="en">Height between last line and foot (mm)</label>
        <label xml:lang="fr">Hauteur entre dernière ligne et pied (mm)</label>
      </var>
    </group>
  </variables>
</publiforge>
