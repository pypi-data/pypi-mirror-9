<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: publidoc2pdf_layout.pfvar.xml 10f45da8a62d 2014/09/07 17:53:02 Patrick $ -->
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Layout</label>
      <label xml:lang="fr">Mise en page</label>

      <var name="first_page" type="integer" visible="true">
        <default>1</default>
        <label xml:lang="en">First page number</label>
        <label xml:lang="fr">Numéro de la première page</label>
      </var>

      <var name="title_page" type="boolean" visible="true">
        <default>true</default>
        <label xml:lang="en">Title page</label>
        <label xml:lang="fr">Page de titre</label>
      </var>

      <var name="toc_depth" type="select" visible="true">
        <default>2</default>
        <option value="-1">Pas de table des matières</option>
        <option value="0">Niveau 1</option>
        <option value="1">Niveau 2</option>
        <option value="2">Niveau 3</option>
        <label xml:lang="en">Depth table of content</label>
        <label xml:lang="fr">Profondeur de la table des matières</label>
      </var>

      <var name="web" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">PDF for Web</label>
        <label xml:lang="fr">PDF pour le Web</label>
      </var>

      <var name="debug" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">Debug</label>
        <label xml:lang="fr">Mise au point</label>
      </var>
    </group>
  </variables>
</publiforge>
