<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: publiset4publidoc_meta.pfvar.xml 10f45da8a62d 2014/09/07 17:53:02 Patrick $ -->
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">Meta data</label>
      <label xml:lang="fr">Meta-données</label>

      <var name="id" type="regex" visible="true">
        <pattern>([\w_-]+)?</pattern>
        <label xml:lang="en">ID</label>
        <label xml:lang="fr">ID</label>
        <description xml:lang="en">
          Identifier for Publiset XML file. By default, it is made from the
          name of the pack.
        </description>
        <description xml:lang="fr">
          Identifiant pour le fichier XML Publiset. Par défaut, il est
          fabriqué à partir du nom du lot.
        </description>
      </var>
      
      <var name="lang" type="select" visible="true">
        <default>en</default>
        <option>en</option>
        <option>fr</option>
        <option>es</option>
        <label xml:lang="en">Language</label>
        <label xml:lang="fr">Langue</label>
      </var>

      <var name="title" type="string" visible="true">
        <label xml:lang="en">Title</label>
        <label xml:lang="fr">Titre</label>
        <description xml:lang="en">
          Title for Publiset XML file. By default, it is the name of the
          pack.
        </description>
        <description xml:lang="fr">
          Titre pour le fichier XML Publiset. Par défaut, c'est le nom du
          lot.
        </description>
      </var>

      <var name="ean" type="regex" visible="true">
        <pattern>(\d{13})?</pattern>
        <label xml:lang="en">EAN</label>
        <label xml:lang="fr">EAN</label>
      </var>

      <var name="copyright" type="string" visible="true">
        <label xml:lang="en">Copyright</label>
        <label xml:lang="fr">Copyright</label>
      </var>

      <var name="collection" type="string" visible="true">
        <label xml:lang="en">Collection</label>
        <label xml:lang="fr">Collection</label>
      </var>

      <var name="author_firstname" type="string" visible="true">
        <label xml:lang="en">Author first name</label>
        <label xml:lang="fr">Auteur, prénom</label>
      </var>
      <var name="author_lastname" type="string" visible="true">
        <label xml:lang="en">Author last name</label>
        <label xml:lang="fr">Auteur, nom</label>
      </var>

      <var name="publisher_name" type="string" visible="true">
        <label xml:lang="en">Publisher name</label>
        <label xml:lang="fr">Éditeur, nom</label>
      </var>
      <var name="publisher_url" type="regex" visible="true">
        <pattern>(https?:\/\/([a-z0-9-]{2,}\.){1,4}[a-z]{2,6})?</pattern>
        <label xml:lang="en">Publisher URL</label>
        <label xml:lang="fr">Éditeur, URL</label>
      </var>

      <var name="keywords" type="string" visible="true">
        <label xml:lang="en">Keywords</label>
        <label xml:lang="fr">Mots clés</label>
        <description xml:lang="en">
          Comma separated list of keywords.
        </description>
        <description xml:lang="fr">
          Liste de mots clés séparés par des virgules.
        </description>
      </var>

      <var name="subjects" type="string" visible="true">
        <label xml:lang="en">Subjects</label>
        <label xml:lang="fr">Thèmes</label>
        <description xml:lang="en">
          Comma separated list of subjects.
        </description>
        <description xml:lang="fr">
          Liste de thèmes séparés par des virgules.
        </description>
      </var>

      <var name="abstract" type="text" visible="true">
        <label xml:lang="en">Abstract</label>
        <label xml:lang="fr">Résumé</label>
      </var>

      <var name="cover" type="string" visible="true">
        <label xml:lang="en">Cover identifier</label>
        <label xml:lang="fr">Identifiant de la couverture</label>
      </var>
    </group>
  </variables>
</publiforge>
