<publiforge version="1.0">
  <variables>
    <!-- ==================== Processor string variables ================== -->
    <group>
      <label xml:lang="en">Strings</label>
      <label xml:lang="fr">Chaînes de caractères</label>

      <var name="str_sep" type="string">
        <default> – </default>
        <label xml:lang="en">Separator between title and subtitle</label>
        <label xml:lang="fr">Séparateur entre titre et sous-titre</label>
      </var>

      <var name="str_notecall_open" type="string">
        <default>(</default>
        <label xml:lang="en">Opening for note call</label>
        <label xml:lang="fr">Ouverture d'appel de note</label>
      </var>

      <var name="str_notecall_close" type="string">
        <default>)</default>
        <label xml:lang="en">Closing for note call</label>
        <label xml:lang="fr">Fermeture d'appel de note</label>
      </var>

      <var name="str_stage_sep" type="string">
        <default>, </default>
        <label xml:lang="en">Separator for stage</label>
        <label xml:lang="fr">Séparateur pour indication scénique</label>
      </var>

      <var name="str_stage_open" type="string">
        <default>(</default>
        <label xml:lang="en">Opening for stage</label>
        <label xml:lang="fr">Ouverture d'indication scénique</label>
      </var>

      <var name="str_stage_close" type="string">
        <default>)</default>
        <label xml:lang="en">Closing for stage</label>
        <label xml:lang="fr">Fermeture d'indication scénique</label>
      </var>
    </group>

    <!-- ===================== Processor math variables =================== -->
    <group>
      <label xml:lang="en">Mathematics</label>
      <label xml:lang="fr">Mathématiques</label>

      <var name="math" type="boolean">
        <default>true</default>
        <label xml:lang="en">Mathematics processing</label>
        <label xml:lang="fr">Traitement des mathématiques</label>
      </var>

      <var name="math_mode" type="select">
        <default>png</default>
        <option value="png">PNG images</option>
        <label xml:lang="en">Mode of formulas transformation</label>
        <label xml:lang="fr">Mode de transformation des formules</label>
      </var>
      
      <var name="math_factor" type="regex">
        <default>0.60</default>
        <pattern>0\.\d{1,3}</pattern>
        <label xml:lang="en">Magnification</label>
        <label xml:lang="fr">Grossissement</label>
      </var>
    </group>
  </variables>
</publiforge>
