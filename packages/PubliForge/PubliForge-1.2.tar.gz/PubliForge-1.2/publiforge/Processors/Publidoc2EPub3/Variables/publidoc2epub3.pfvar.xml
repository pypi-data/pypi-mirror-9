<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: publidoc2epub3.pfvar.xml b89b0b9fa81a 2015/02/01 20:03:53 Patrick $ -->
<publiforge version="1.0">
  <variables>
    <group>
      <label xml:lang="en">ePub 3</label>
      <label xml:lang="fr">ePub 3</label>

      <var name="ean" type="regex">
        <pattern>(\d{13})?</pattern>
        <label xml:lang="en">Forced EAN</label>
        <label xml:lang="fr">EAN forcé</label>
      </var>

      <var name="publisher_label" type="string">
        <label xml:lang="en">Publisher label</label>
        <label xml:lang="fr">Libellé de l'éditeur</label>
      </var>

      <var name="publisher_url" type="regex">
        <pattern>(https?:\/\/([a-z0-9-]{2,}\.){1,4}[a-z]{2,6})?</pattern>
        <label xml:lang="en">Publisher URL</label>
        <label xml:lang="fr">URL de l'éditeur</label>
      </var>

      <var name="cover" type="string">
        <label xml:lang="en">Forced cover</label>
        <label xml:lang="fr">Couverture forcée</label>
        <description xml:lang="en">
          Path to image or = to force current cover (head/cover).
        </description>
        <description xml:lang="fr">
          Chemin vers l'image ou = pour forcer la couverture courante
          (head/cover).
        </description>
      </var>

      <var name="extract_cover_ext" type="select">
        <default>.jpg</default>
        <option value=".png">PNG</option>
        <option value=".jpg">JPEG</option>
        <label xml:lang="en">Format of extracted cover</label>
        <label xml:lang="fr">Format de la couverture extraite</label>
      </var>
      
      <var name="extract_cover_size" type="regex" visible="true">
        <pattern>(\d{1,4}x\d{0,4}&gt;?)?</pattern>
        <label xml:lang="en">Size of extracted cover</label>
        <label xml:lang="fr">Taille de la couverture extraite</label>
        <description xml:lang="en">
          If this size is not empty, an image for cover is produced next to
          the ePub.
        </description>
        <description xml:lang="fr">
          Si cette taille n'est pas vide, une image pour la couverture est
          produite à côté de l'ePub.
        </description>
      </var>

      <var name="writing_mode" type="select">
        <default>horizontal-lr</default>
        <option>horizontal-lr</option>
        <option>horizontal-rl</option>
        <option>vertical-lr</option>
        <option>vertical-rl</option>
        <label xml:lang="en">Writing mode</label>
        <label xml:lang="fr">Sens d'écriture</label>
      </var>

      <var name="toc" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">With a page for the main table of content</label>
        <label xml:lang="fr">Avec une page pour le sommaire principal</label>
      </var>

      <var name="toc_division_depth" type="select" visible="true">
        <default>0</default>
        <option>0</option><option>1</option><option>2</option>
        <option>3</option><option>4</option><option>5</option>
        <label xml:lang="en">Depth of divisionss in main table of content</label>
        <label xml:lang="fr">Profondeur des divisions dans le sommaire principal</label>
      </var>

      <var name="toc_section_depth" type="select" visible="true">
        <default>1</default>
        <option>0</option><option>1</option><option>2</option>
        <option>3</option><option>4</option><option>5</option>
        <label xml:lang="en">Depth of sections in main table of content</label>
        <label xml:lang="fr">Profondeur des sections dans le sommaire principal</label>
      </var>

      <var name="toc_with_abstract" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">Abstracts in main table of content</label>
        <label xml:lang="fr">Résumés dans le sommaire principal</label>
      </var>

      <var name="subtoc" type="boolean" visible="true">
        <default>true</default>
        <label xml:lang="en">With intermediate tables of content</label>
        <label xml:lang="fr">Avec sommaires intermédiaires</label>
      </var>

      <var name="index" type="boolean">
        <default>false</default>
        <label xml:lang="en">With an index page</label>
        <label xml:lang="fr">Avec une page d'index</label>
      </var>

      <var name="js" type="boolean" visible="true">
        <default>false</default>
        <label xml:lang="en">With JavaScript</label>
        <label xml:lang="fr">Avec JavaScript</label>
      </var>
    </group>
    
  </variables>
</publiforge>
