[check-manifest]
ignore =
    *.DS_Store
    .tx
    .tx/*
    .coveragerc
    .csslintrc
    .jshintignore
    .travis.yml
    bootstrap.py
    buildout.cfg
    templates
    templates/*
    travis.cfg


[distutils]
index-servers =
    pypi


[sdist]
formats = zip


[ps.releaser]
diazo_export.enabled = 1
diazo_export.path = src/{{{ package.namespace }}}/{{{ package.namespace2 }}}/{{{ package.name }}}/diazo_resources
diazo_export.adjust_title = 1
