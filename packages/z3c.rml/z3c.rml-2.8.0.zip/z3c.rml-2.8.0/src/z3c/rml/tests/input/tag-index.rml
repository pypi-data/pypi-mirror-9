<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE document SYSTEM "rml.dtd">
<document
    filename="tag-index.pdf"
    xmlns:doc="http://namespaces.zope.org/rml/doc">

  <docinit>
    <startIndex doc:example="" />
  </docinit>

  <template>
    <pageTemplate id="main">
      <frame id="first" x1="1cm" y1="1cm" width="19cm" height="26cm"/>

      <pageGraphics>
          <place x="0.5cm" y="0.5cm" width="10cm" height="1cm">
            <para>Page <pageNumber /></para>
          </place>
      </pageGraphics>

    </pageTemplate>
  </template>

  <story>
    <title>Index Demo</title>

    <!-- Page 1 -->
    <para>This text <index item="text" /> is showing indexing.</para>
    <nextPage/>

    <!-- Page 2 -->
    <para>Here are some more words. <index item="words"/></para>
    <nextPage/>

    <!-- Page 3 -->
    <para>This text <index item="text"/> is on page 3.</para>
    <nextPage/>

    <h1>Index</h1>
    <showIndex dot="." doc:example="" />

  </story>

</document>
