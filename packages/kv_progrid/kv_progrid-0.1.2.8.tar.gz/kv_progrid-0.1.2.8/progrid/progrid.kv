#:kivy 1.8

<RowLayout>:
    canvas.after:
        Color:
            rgba: [1,0,0,.5]
        Rectangle:  
            pos: root.pos
            size: root.size


#==============================================================================
<ProGridCustomizator>:
#==============================================================================
    size_hint: None, None
    font_size: dp(24)
    on_press: self.customize()

#==============================================================================
<ProGrid>:
#==============================================================================
    header:header
    footer:footer
    content:content

    size:root.size
    pos:root.pos
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: root.grid_color
        Rectangle:  
            pos: root.pos
            size: root.size

    BoxLayout:
        id: header
        size_hint: ( 1, None )
        height: root.header_height
        orientation: 'horizontal'
        
        canvas.before:
            Color:
                rgba: root.header_background_color
            Rectangle:  
                pos: self.pos
                size: self.width, root.header_height

    ScrollView:
        size_hint: ( 1, 1 )
        bar_width: dp(7)
        
        GridLayout:
            id: content
            size_hint: 1, None
            cols: 1
            spacing: dp(1) #root.grid_width_h, root.grid_width_v

    BoxLayout:
        id: footer
        size_hint: ( 1, None )
        height: root.footer_height
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: root.footer_background_color
            Rectangle:  
                pos: self.pos
                size: root.width, root.footer_height

