<?xml version="1.0"?>
<object name="portal_javascripts">

    <javascript
        id="++theme++graphite.theme/js/graphite.theme.main.js"
        expression="python:request.cookies.get('bika.graphite.disabled', '0')=='0' and request['HTTP_X_THEME_ENABLED']"
        enabled="True" />

    <!-- Javascript to control Theme's ON/OFF behavior -->
    <javascript
        id="++theme++graphite.theme/js/graphite.theme.inactive.js"
        expression="python:request.cookies.get('bika.graphite.disabled', '0')=='1' and request['HTTP_X_THEME_ENABLED']"
        enabled="True" />

    <!-- Disable old js -->
    <javascript
        id="++theme++graphite.theme/js/main.js"
        enabled="False" />

</object>
