source "${PKGCORE_BIN_PATH}"/eapi/4.lib

has_version() {
	local r=${ROOT:-/}
	if [[ $1 == "--host-root" ]]; then
		r=/
		shift
	fi
	PKGCORE_DISABLE_COMPAT=true portageq 'has_version' "$1" --domain-at-root "${r}"
}

best_version() {
	local r=${ROOT:-/}
	if [[ $1 == "--host-root" ]]; then
		r=/
		shift
	fi
	PKGCORE_DISABLE_COMPAT=true portageq 'best_version' "$1" --domain-at-root "${r}"

}

usex() {
	use "$1" && echo "${2-yes}$4" || echo "${3-no}$5"
	return 0
}

:
