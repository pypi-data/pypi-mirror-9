<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="2.0"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:outline="http://wkhtmltopdf.org/outline"
                xmlns:tal="http://xml.zope.org/namespaces/tal"
                xmlns="http://www.w3.org/1999/xhtml">
  <xsl:output doctype-public="-//W3C//DTD XHTML 1.0 Strict//EN"
              doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"
              indent="yes" />
  <xsl:template match="outline:outline">
    <html>
      <head>
        <title tal:content="view/header">Contents</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <style>
          body {
            font-family: verdana;
          }

          header {
            text-align: left;
            font-size: 20pt;
            font-weight: bold;
            padding-bottom: 2em;
            border-bottom: 1pt solid #000;
            margin-bottom: 1.5em;
          }

          ul {
            font-weight: bold;
            font-size: 14pt;
            padding-left: 0;
            list-style: none;
            page-break-inside: auto;
          }

          ul ul {
            font-size: 12pt;
          }

          ul ul ul {
            font-weight: normal;
          }

          ul li {
            page-break-inside: avoid;
          }

          ul ul li {
            margin: .5em 0 .5em 2em;
          }

          ul .item {
            margin: 2em 0 1em 0;
          }

          ul ul .item {
            margin: 0;

          }

          .item:after {
            content: "";
            display: table;
            clear: both;
          }

          .item a {
            display: block;
            margin-right: 30pt;
            color: #000;
            text-decoration: none;
          }

          ul .page {
            display: none;
          }

          ul ul .page {
            float: right;
            display: block;
            color: black;
            text-decoration: none;
            height: 0;
            margin-top: -14pt;
          }

          ul ul .item a:after {
            content: "";
            display: block;
            border-bottom: 2pt dotted;
            margin-top: -3pt;
          }

          ul .item {
            border-bottom: 2px solid #000;
          }

          ul ul .item {
            border-bottom: none;
          }

          .title {
            background: white;
            padding-right: 5pt;
          }

        </style>
      </head>
      <body class="table-of-contents">
        <header tal:content="view/header">Contents</header>
        <ul><xsl:apply-templates select="outline:item/outline:item"/></ul>
      </body>
    </html>
  </xsl:template>
  <xsl:template match="outline:item">
    <li>
      <xsl:if test="@title!=''">
        <div class="item">
          <a>
            <xsl:if test="@link" tal:condition="view/toc_links">
              <xsl:attribute name="href"><xsl:value-of select="@link"/></xsl:attribute>
            </xsl:if>
            <xsl:if test="@backLink" tal:condition="view/toc_links">
              <xsl:attribute name="name"><xsl:value-of select="@backLink"/></xsl:attribute>
            </xsl:if>
            <span class="title"><xsl:value-of select="@title" /></span>
          </a>
          <span class="page"><xsl:value-of select="@page"/></span>
        </div>
      </xsl:if>
      <ul>
        <xsl:comment>added to prevent self-closing tags in QtXmlPatterns</xsl:comment>
        <xsl:apply-templates select="outline:item"/>
      </ul>
    </li>
  </xsl:template>
</xsl:stylesheet>
