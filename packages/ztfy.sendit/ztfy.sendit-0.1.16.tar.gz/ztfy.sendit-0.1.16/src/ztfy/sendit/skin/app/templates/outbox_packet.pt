<div class="packet" i18n:domain="ztfy.sendit">
	<h5 tal:content="context/title" />
	<div class="description"
		 tal:define="description context/description/html:text"
		 tal:condition="description"
		 tal:content="structure description" />
	<div class="small">
		<strong i18n:translate="">Recipients:</strong>
		<tal:loop repeat="recipient python:context.recipients.split(',')">
			<span class="badge" tal:content="python:view.getPrincipal(recipient)" />
		</tal:loop>
	</div>
	<div class="small">
		<strong i18n:translate="">Expiration date:</strong>
		<span tal:content="view/getExpirationDate" />
	</div>
	<div class="small">
		<strong i18n:translate="">Documents:</strong>
		<tal:loop repeat="document context/values">
			<div class="document" tal:define="downloaders python:document.downloaders or {}">
				<div>
					<a tal:attributes="href string:${document/@@absolute_url}/@@download.html" target="_blank">
						<span class="label label-success">
							<tal:var content="document/title" />
						</span>
					</a>
					(<span tal:content="document/data/contentType" /> &ndash;
					 <span tal:content="document/getSize" />)
					<div tal:condition="downloaders">
						<strong i18n:translate="">Downloaded by:</strong><br />
						<ul>
							<li tal:repeat="downloader python:sorted(downloaders.items(), key=lambda x: x[1])">
								<span tal:content="python:view.getPrincipal(downloader[0])" />
								(<span tal:content="python:view.getDate(downloader[1])" />)
							</li>
						</ul>
					</div>
				</div>
			</div>
		</tal:loop>
	</div>
</div>