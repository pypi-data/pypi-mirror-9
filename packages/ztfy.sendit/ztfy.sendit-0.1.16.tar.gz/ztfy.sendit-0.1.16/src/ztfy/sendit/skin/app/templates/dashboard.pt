<div class="span12" i18n:domain="ztfy.sendit">
	<div class="widget-box">
		<div class="widget-title">
			<span class="icon">
				<i class="icon-inbox"></i>
			</span>
			<h5 i18n:translate="">Last packets intended to you</h5>
		</div>
		<tal:var define="inbox view/inbox">
			<div class="widget-content nopadding"
				 tal:condition="inbox/values"
				 tal:content="structure view/inbox/renderTable" />
			<div class="widget-content"
				 tal:condition="not:inbox/values"
				 i18n:translate="">You don't have any packet in your inbox.</div>
		</tal:var>
	</div>
	<div class="offset1" tal:condition="view/inbox/values">
		<span class="small" i18n:translate="">Legend:</span>
		&nbsp;
		<span class="label label-success">&nbsp;</span> <span class="small" i18n:translate="">Downloaded document</span>
		&nbsp;&nbsp;
		<span class="label label-important">&nbsp;</span> <span class="small" i18n:translate="">Document available for download</span>
	</div>
	<div class="widget-box">
		<tal:var define="outbox view/outbox">
			<div class="widget-title">
				<span class="icon">
					<i class="icon-share"></i>
				</span>
				<h5 i18n:translate="">Your last shared packets</h5>
				<span class="progress" tal:define="quota outbox/quota_pc">
					<span class="mini" i18n:translate="">Quota usage:</span>
					<span class="progress-inner"
						  tal:attributes="style string:background-position-x: -${quota}px;;"></span>
					<span class="mini" tal:content="string:${quota}%" />
				</span>
			</div>
			<div class="widget-content nopadding"
				 tal:condition="outbox/values"
				 tal:content="structure view/outbox/renderTable" />
			<div class="widget-content"
				 tal:condition="not:outbox/values"
				 i18n:translate="">You don't share any packet.</div>
		</tal:var>
	</div>
</div>
