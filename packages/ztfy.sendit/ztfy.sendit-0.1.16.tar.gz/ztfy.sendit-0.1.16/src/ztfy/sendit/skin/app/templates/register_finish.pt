<tal:var i18n:domain="ztfy.sendit">
	<div class="span12">
		<div class="alert alert-success">
			<strong i18n:translate="">Congratulations!</strong><br />
			<i18n:var translate="">Your registration is complete.</i18n:var><br />
			<i18n:var translate="">You can now go to home page and enter your credentials to use our files sharing service.</i18n:var>
		</div>
	</div>
	<div>
	<div class="span4 offset1">
		<a class="btn btn-success" tal:attributes="href string:${context/@@absolute_url}/@@index.html">
			<i class="icon icon-white icon-home"></i>
			<i18n:var translate="">Go to home page!</i18n:var>
		</a>
	</div>
</tal:var>