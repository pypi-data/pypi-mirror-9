<div class="packet" i18n:domain="ztfy.sendit">
	<h5 tal:content="context/title" />
	<div class="description"
		 tal:define="description context/description/html:text"
		 tal:condition="description"
		 tal:content="structure description" />
	<tal:loop repeat="document context/values">
		<div class="document" tal:define="download python:(document.downloaders or {}).get(request.principal.id)">
			<div>
				<a tal:attributes="href string:${document/@@absolute_url}/@@download.html" target="_blank">
					<span tal:attributes="class python:'label label-success' if download else 'label label-important'">
						<tal:var content="document/title" />
						<i class="icon icon-white icon-download" tal:condition="not:download"></i>
					</span>
				</a>
				<span class="small">
					(<span tal:content="document/data/contentType" /> &ndash;
					<span tal:content="document/getSize" /><tal:if 
						condition="download"> &ndash; <span i18n:translate="">downloaded <tal:var content="python:view.getDate(download)" i18n:name="date" /></span></tal:if>)
				</span>
			</div>
		</div>
	</tal:loop>
	<a tal:condition="python:len(context) > 1"
	   tal:attributes="href string:${context/@@absolute_url}/@@zip.html"
	   target="_blank">
		<span class="label label-warning">
			<span class="small" i18n:translate="">Download all documents in ZIP file</span>
			<i class="icon icon-white icon-download"></i>
		</span>
	</a>
</div>