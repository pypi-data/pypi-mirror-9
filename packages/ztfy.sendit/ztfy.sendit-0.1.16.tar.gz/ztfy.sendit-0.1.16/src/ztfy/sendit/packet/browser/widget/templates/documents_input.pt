<div data-ztfy-submit-callback="$.ZTFY.sendit.form.checkDocumentsInputs"
	 tal:attributes="class string:${view/klass} documents-list;
					 data-sendit-documents-id view/id;
					 data-sendit-documents-name view/name;" i18n:domain="ztfy.sendit">
	<input tal:condition="view/widgets" tal:replace="structure view/counterMarker" />
	<div class="item" tal:repeat="widget view/widgets">
		<img tal:condition="python:view.mode == 'input'"
			 class="toright trash pointer" src="/--static--/onf.medialib/img/trash.png"
			 title="Remove selected document" i18n:attributes="title"
			 onclick="$.ZTFY.sendit.form.removeOldDocument(this);" />
		<tal:var replace="structure widget/render" />
	</div>
</div>