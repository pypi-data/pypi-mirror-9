<div class="form" i18n:domain="ztfy.sendit">
	<fieldset class="profile-search">
		<legend i18n:translate="">Search user profile</legend>
		<div class="help" i18n:translate="">You can search a principal ID and display it's properties when it's selected</div>
		<div>
			<input type="text" name="principal_id"
					data-ztfy-widget="multiselect"
					data-multiselect-class="user"
					data-multiselect-separator=","
					data-multiselect-search-callback="$.ZTFY.json.getQuery"
					data-multiselect-max-results="20"
					data-multiselect-enable-new="false"
					data-multiselect-complex-search="false"
					data-multiselect-max-selection-length="1"
					tal:attributes="data-multiselect-search-args string:findPrincipals;;;;{'names':'${view/auth_plugins}'}" />
		</div>
	</fieldset>
</div>