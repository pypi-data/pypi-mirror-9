<div class="document" i18n:domain="ztfy.sendit"
	 tal:define="context view/context">
	<input type="hidden" tal:attributes="name string:${view/name}-empty-marker" value="1" />
	<input type="hidden" tal:attributes="name string:${view/name}.widgets.title; value context/title;" />
	<strong tal:content="context/title" /><br />
	<tal:var define="value context/data">
		<span i18n:translate="">Current content:</span> <span tal:content="value/contentType" /> &nbsp;&ndash;&nbsp;
		<span tal:content="python:value.getSize() / 1024" /> <span i18n:translate="">Kb</span>
		<span class="download-link"><a target="_blank" tal:attributes="href value/@@absolute_url" i18n:translate="">Download</a></span>
	</tal:var>
</div>