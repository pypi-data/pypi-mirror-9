/*
 * Variables
 * --------------------------------------------------
 */

// Fonts
@font-family-sans-serif: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;

// Text
@text-color:            #45494c;
@font-size-h1:            floor(@font-size-base * 3.4); // ~48px //h1 & h2 bigger than Bootstrap
@font-size-h2:            floor(@font-size-base * 2.6); // ~36px

// Navbar
@navbar-margin-bottom: 0;

//List
@bullet-color: #a3c5e0;

// Input
@input-border: #cccccc;

// Footer
@footer-bg: #2e3133;
@footer-text-main: #929BA1;
@sep-line: @footer-text-main;

// accessibility overrides
@validgrey: #767676; //lightest gray that'll validate
@brand-primary: #007BB3;
@link-darkbg: #16a1e3;
@input-color-placeholder: @validgrey;
@input-border:  @validgrey;
@input-bg-disabled: @gray-lighter;


/*
 * Style tweaks
 * --------------------------------------------------
 */
html {
    overflow-x: hidden; /* Prevent scroll on narrow devices */
}

/* container-fluid */
.container-fluid {
  max-width: 1200px;
}

/* Behaviors and BS3 patterns */

.hiddenStructure {
    .text-hide();
    margin: 0;
}

#portal-logo {
    .navbar-brand();
    padding-left:0;
    height: auto;
}
#portal-languageselector {.list-inline; float:right; margin-top: 36px;margin-right: 10px;}
#portal-searchbox {float:right; margin-top: 30px;}

#portal-globalnav {
    .nav();
    .navbar-nav();
}
@media screen and (max-width: 767px) {
  #portal-globalnav {
    padding: 0;
    margin: 0;
    li {
      &:first-child {border:0;}
      a {margin: 0 -15px; padding:20px 15px;}
    }
  }
}

.portalMessage.info {
  .alert();
  .alert-info();
}

.portalMessage.error {
  .alert();
  .alert-danger();
}

.portalMessage.warning {
  .alert();
  .alert-warning();
}

/* Styles */

#content-header {
    background-color: transparent;
    border: 0;
}


/* Above content wrapper */

#above-content-wrapper {
  padding: 0px;
  margin: 0px;
}

/* Global nav wrapper */

#mainnavigation-wrapper {
  background: rgb(0,123,179,1);
  box-shadow: 0px 5px 5px rgba(0,0,0,.17);
  z-index: 50;
  position: relative;
  padding:0; margin:0;

  #portal-globalnav-wrapper {
    margin-bottom: 0px;
    border: 0px;
  }

  .navbar-toggle .icon-bar {
    background: white;
  }

  #portal-globalnav>li>a {
    color: white;
    font-size: 1.1em;
    text-transform: uppercase;
    font-weight:600;
  }

  #portal-globalnav>li>a:hover,
  #portal-globalnav>li.selected>a,{
    background-color: rgba(154,189,214,1);
  }

}


/* Search */

#searchGadget {
  border: 1px solid @input-border;
  border-radius: 50px;
  float: right;
  transition: all 1s;
  &::-webkit-input-placeholder, &:-moz-placeholder, &::-moz-placeholder, &:-ms-input-placeholder, [placeholder] {color:red;}
  &:focus {width: 300px; color: #333;}
}


/* Hero */

.hero {
  background: url('@{pathPrefix}images/barceloneta-ticks.png');
  background-repeat: repeat-x;

  .jumbotron {
    background: url('@{pathPrefix}images/barceloneta-bg-watermark.png');
    background-position: bottom right;
    background-repeat: no-repeat;
    margin-bottom: 0px;
    padding-left:0;
    padding-right: 0;
    img {
      width: 100%;
    }
  }
}



/* Breadcrumbs */

#breadcrumbs-you-are-here {margin-right: 10px;}
#portal-breadcrumbs {
  /*background: url('@{pathPrefix}images/barceloneta-bg-breadcrumb.png');*/
  background-repeat: repeat-x;
  padding-top: 10px;
  padding-bottom: 10px;
  font-weight: bold;
  font-size: 90%;
  ol {
    padding:0;
    margin: 0;
    display: inline-block;
  }
  li {
    display: inline-block;
  }
  li+li:before {
    content: ">"; // before /\00a0";
    padding: 0 5px;
    color: #999;
    margin-left: 5px;
    margin-right: 5px;
  }
}
@media screen and (max-width: 767px) {
  .breadcrumb { padding: 0; }
}


.hiddenStructure {
  display: none;
}

/*Content*/

ul, ol {
  list-style: none;
  counter-reset: ol;
  padding-left: 0;
  li {
    margin-bottom: .5em;
    padding-left: 2em;
    text-indent: -2em;
  }
}
ul li:before {
  content: "●";
  color: @bullet-color;
  padding-right: 1em;
}
ol li:before {
  content: counter(ol) ".";
  counter-increment: ol;
  padding-right: 1em;
  color: @gray-light;
}
// reset list styles in certain contexts
.navbar, .dropdown-menu, .breadcrumb, .navTree, .field, #portal-globalnav, .historyTools, .pagination, .select2-drop {
  li:before, li:before { content: none; }
  li {
    margin-bottom: initial;
    padding-left: 0;
    text-indent: 0;
  }
}
#history-list {
  p {margin-bottom: 0; margin-left:30px;}
  li {margin-bottom: 15px; padding-left: 0; text-indent: 0;}
  .historyTools form {display: inline;}
}
.croppedDescription {margin-left: 30px} /*adds padding on search results description*/
#content {
  .documentFirstHeading {
    margin-top: 0;
  }
  .documentByLine {
    color: @gray-light;
    /*
    > span {
      .label;
      .label-default;
      background:@gray-lighter;
      padding: .3em .5em;
      margin: auto .25em;
    }
    */ //remove styling of author from list to keep it simple
    :first-child {margin-left:0;}
  }
  .documentDescription {
    font-style: italic;
    font-size: 120%;
    margin-bottom: 1.5em;
  }

  //added class for highlighted ordered lists
  .ol-primary li {
    margin-bottom: 1.5em;
  }
  .ol-primary li:before {
    content: counter(ol) "";
    counter-increment: ol;
    padding-right: 1em;
    background: #0082be;
    border-radius: 100%;
    color: white;
    font-weight: bold;
    padding: 5px 10px;
    margin-right:1em;
  }
  h2, .h2 { //h2 titles with border and more air
    border-top:1px solid #e1e2ff;
    padding-top:30px;
    padding-bottom:30px;
    margin-top: 40px;
    margin-bottom:0;
    font-weight: 600;
  }
}



/* Footer */

footer {
    padding: 30px 0;
}
#portal-footer-wrapper {
  background-color: @footer-bg;
  color: @footer-text-main;
  p {
    border-bottom: 1px solid @sep-line;
    padding-bottom: 28px;
  };
  a {
    color: @link-darkbg;
  }
  .portletWrapper {display: inline-block;
    &:first-child {display: block; border-bottom: 1px solid #454545; padding-bottom: 1em;margin-bottom: .5em;}
  }
  .portlet { //unstyled portlet
    background: transparent;
    border: 0;
    font-weight: 200;
    .portletContent {}
    .portletContent li {background: transparent; display: inline-block;border: 0; white-space: nowrap; padding: 10px 30px;}
    .portletItem:before {content: "";}
  }
  .portletActions {text-transform: uppercase; font-size: 85%; font-weight: 600; margin-right: 15px;}
}
#portal-footer {
  text-align: center;
  margin-bottom: 25px;
}
#portal-siteactions, #portal-colophon  {
  display: inline-block;
  text-transform: uppercase;
  font-size: 85%;
}
#portal-siteactions {
  li {
    font-weight: bold;
    display: inline-block;
    margin-left: 30px;
    &:first-child {
      margin-left: 0;
    }
  }
}

/* Ajax less */

body.ajax_load {
  padding-top: 0px;
}

/* Generic portlet styling */

.portlet-variant(@border; @heading-text-color; @heading-bg-color; @heading-border) {
  border-color: @border;

  & > .portletHeader {
    color: @heading-text-color;
    background-color: @heading-bg-color;
    border-color: @heading-border;

    + .portletContent {
      border-top-color: @border;
    }
  }
  & > .portletFooter {
    + .panel-collapse .panel-body {
      border-bottom-color: @border;
    }
  }
}

.portlet {
   .portlet-variant(@panel-default-border; @panel-default-text; @panel-default-heading-bg; @panel-default-border);
   &:extend(.panel all);

 }

.portletHeader {
  &:extend(.panel-heading all);
}

.portletFooter {
  &:extend(.panel-footer all);
}

.portletContent {
  &:extend(.list-group all);
  &:extend(.panel > .list-group all);
}

.portletItem {
  &:extend(.list-group-item all);
  &:extend(.panel > .list-group .list-group-item all);
}


/*
 * Off Canvas
 * --------------------------------------------------
 */
@media screen and (max-width: 767px) {
    .row-offcanvas {
        position: relative;
        -webkit-transition: all 0.25s ease-out;
        -moz-transition: all 0.25s ease-out;
        transition: all 0.25s ease-out;
    }

    .row-offcanvas-right
    .sidebar-offcanvas {
        right: -50%; /* 6 columns */
    }

    .row-offcanvas-left
    .sidebar-offcanvas {
        left: -50%; /* 6 columns */
    }

    .row-offcanvas-right.active {
        right: 50%; /* 6 columns */
    }

    .row-offcanvas-left.active {
        left: 50%; /* 6 columns */
    }

    .sidebar-offcanvas {
        position: absolute;
        top: 0;
        width: 50%; /* 6 columns */
    }
}



/* Form elements */
.discreet {
    color: @gray-light;
    font-weight: 200; //lighter is cooler
    }
.formHelp {
    font-style: italic;
    font-weight: 200;
    color: @gray-light;
    }
.formControls  {
    margin-top:30px;
    }
.field  {
    margin-top:15px;
    margin-bottom:15px;
    }

.listing:extend(.table all) {}

// I keep every extension separeted to show each element
[type="text"]:extend(.form-control all),
[type="password"]:extend(.form-control all),
.textType:extend(.form-control all),
.passwordType:extend(.form-control all),
select:extend(.form-control all),
textarea:extend(.form-control all) {font-size:100%;}
textarea {resize:vertical;} //no free resize

.btn {/*border: 0; padding: 12px 24px;*/ letter-spacing: .05em;
  &:hover {box-shadow: 0 2px 2px rgba(0,0,0,.17);}
  &:focus, &:active {box-shadow: inset 0 5px 5px rgba(0,0,0,.17); outline: 0 none !important;}
  &.disabled {background-color: #e5e5e5; color:#999; border-color:#ddd;}}/*changes some Bootstrap styles on buttons to be applied on BCNeta*/
.btn-default {background-color:#ddd;
  &:hover {background-color: #bbb;}
}

button:extend(.btn all),
[type="submit"]:extend(.btn all),
.context:extend(.btn all),
.standalone:extend(.btn all) { }
.context:extend(.btn-primary all) { }

.label { //labels are not appearing
  color:inherit;
  font-size: 100%;
  padding: 0;
}
.managedPortletActions form {
  display: inline-block;
}
.link-parent {
  .btn;
  .btn-default;
}

/* help classes */
.visualClear:extend(.clearfix all) {}



#content .field input[type="text"] {font-size: 1em;}

/*style cleaner MODALS*/
.modal-content {border:0; box-shadow: 0 0 0 500px rgba(0,0,0,.67); border-radius: 4px;}
.modal .modal-dialog {box-shadow: 0 0 100px rgba(0,0,0,.17);}
.modal .modal-dialog .modal-header {border-bottom: 0; padding: 20px 20px 0;
  h3 {font-size: 36px;}
  a.close { margin-top: -2px;font-size: 300%;font-weight: 200;opacity: .33;
    &:hover, :focus {opacity: .67;}
  }
} /*complet route to win*/
.modal-footer {border-top: 0;}

.required {
  margin-left:-5px; /*compensate &nbsp; space*/
  &:after {color: #B3005D; content:"*"; top:.25em; position:relative; font-size:150%; line-height: 0;}
}
[type="checkbox"].required, [type="radio"].required { margin-right: 1em;
  &:after {margin-left:.75em; top:.1em;}
}
#content .field input[type="text"][id$="title"] {font-size:200%; height: auto;}

.picker__select--month, .picker__select--year {display: inline-block;}
.picker__weekday { font-size: 1em; text-align: center;}
.pattern-pickadate-wrapper .pattern-pickadate-date-wrapper .picker__holder {margin:0;}



/*fix folder contents tables and lists*/
.popover.columns ul li {padding: 7px 2.5em; border-bottom:1px solid #ddd;
  input {margin: 4px 5px 0;}
  &:hover {background: #eee;}}
.pat-structure .popover .popover-title {padding-bottom: 8px;}/*cancells that line, ideal is to remove it*/
.item-dragging {background-color: #fea;}
.pat-structure .btn .label {padding: 0 5px; color: #fff;}



/*footer for pages really short*/
body, html {height: 100%;}
.outer-wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -139px;
  padding: 0 0 139px;
  } /*139px is footer height*/
#portal-footer-wrapper {
  min-height: 139px;
  & .portlet {margin-bottom: 0;}
}
#portal-footer { margin-bottom: 0; }

/*portlet navigation tree*/
.portletNavigationTree {
  margin-top: 10px;
  ul {margin-bottom: 0}
  li a {padding: 10px 15px; display: block; border-top: 1px solid #ddd; background: #f2f2f2;
    &:hover {background: #e5e5e5; text-decoration: none;}
    &.navTreeCurrentItem {background: #ddd;}
  }
  li:first-child a {border-top: 0;}
}

/*forms holly checkbox with long label to not be displayed down*/
[type="checkbox"] ~ label,[type="radio"] ~ label { display: inline; }
