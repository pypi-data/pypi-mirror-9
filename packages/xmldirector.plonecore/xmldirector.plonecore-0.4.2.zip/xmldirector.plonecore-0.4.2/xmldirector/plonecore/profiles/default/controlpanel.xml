<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="xmldirector.plonecore"
    purge="False">

    <configlet
        title="XML-Director Settings"
        action_id="xmldirector.plonecore"
        appId="xmldirector.plonecore"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@xmldirector-core-settings"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
    
    <configlet
        title="XML-Director Introspection"
        action_id="xmldirector.plonecore.introspection"
        appId="xmldirector.plonecore"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@xmldirector-core-introspection"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

    <configlet
        title="XML-Director Lock manager"
        action_id="xmldirector.plonecore.lockmanager"
        appId="xmldirector.plonecore"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@xmldirector-core-lockmanager"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
