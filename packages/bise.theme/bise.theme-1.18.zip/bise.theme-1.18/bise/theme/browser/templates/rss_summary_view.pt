<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="content-core">
<metal:block use-macro="context/standard_view/macros/content-core">

    <metal:entries fill-slot="entries">
    <metal:block use-macro="context/standard_view/macros/entries">
    <metal:entry fill-slot="entry">

        <div class="tileItem visualIEFloatFix"
             tal:define="obj item/getObject">
            <a href="#"
                  tal:condition="obj/image|nothing"
                  tal:attributes="href item/getURL">
                  <div class="tileImage">
                      <img src="" alt=""
                           tal:define="scales obj/@@images;
scale python:scales.scale('image', 'thumb')"
                           tal:replace="structure python:scale and scale.tag(css_class='tileImage') or None" />
                  </div>
            </a>
            <span class="portletItemDetail" tal:condition="obj/aq_parent/Subject"
              tal:content="python:obj.aq_parent.Subject()[0]"></span>,
            <span class="portletItemDetail"
                  tal:content="python:toLocalizedTime(obj.getFeedItemUpdated())">
                Date
            </span><span>: </span>
                <a href="#"
                   class="summary url"
                   tal:attributes="href python:item_type in use_view_action and item_url+'/view' or obj.getLink();"
                   tal:content="item/Title">
                    Item Title
                </a>

            <div class="visualClear"><!-- --></div>
        </div>

    </metal:entry>
    </metal:block>
    </metal:entries>

</metal:block>
</metal:content-core>

</body>
</html>