<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook" position="inside">
        <page name="payments" string="Payments">
            <button name="add_payment" colspan="4" string="Add Payment"/>
            <label name="payment_authorize_on"/>
            <field name="payment_authorize_on"/>
            <label name="payment_capture_on"/>
            <field name="payment_capture_on"/>
            <label name="payment_total"/>
            <field name="payment_total"/>
            <label name="payment_collected"/>
            <field name="payment_collected"/>
            <field name="sorted_payments" colspan="4"/>
            <group id="payment_state_and_amount" col="6" colspan="4">
                <label name="payment_authorized"/>
                <field name="payment_authorized"/>
                <label name="payment_captured"/>
                <field name="payment_captured"/>
                <label name="payment_processing_state"/>
                <field name="payment_processing_state"/>
            </group>
        </page>
    </xpath>
</data>
