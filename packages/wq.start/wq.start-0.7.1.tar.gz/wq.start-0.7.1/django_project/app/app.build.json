{
    "optimize": {
        "appDir": ".",
        "baseUrl": "js/lib",
        "dir":     "../htdocs-build",
        "skipDirOptimize": true,
        "removeCombined": true,

        "modules": [
            {
                "name": "{{ project_name }}"
            }
        ],
        "paths": {
            "{{ project_name }}": "../{{ project_name }}",
            "data": "../data"
        }
    },
    "setversion": {
       "filename": "../version.txt",
       "jsout": "js/data/version.js"
    },
    "collectjson": [
        {
            "paths": ["../templates"],
            "type": "html",
            "output": "js/data/templates.js",
            "json": {
                "indent": 4
            },
            "jsonp": "define"
        }
    ],
    "scss": {
        "indir": "scss",
        "outdir": "css"
    },
    "appcache": {
        "name": "{{ project_name }}.appcache",
        "css":  "css/{{ project_name }}.css",
        "cache": [
            "js/lib/require.js"
        ],
        "network": [
            "*",
            "http://*",
            "https://*"
        ],
        "fallback": [""]
    }
}
