from __future__ import print_function

import sys
sys.path.insert(0, '..')

from pandaemonium import Daemon, TrackFiles
TrackFiles.install()
del TrackFiles

import time

def test_log():
    while True:
        print(time.time())
        time.sleep(5)

if __name__ == '__main__':
    daemon = Daemon(
            target=test_log,
            stdout=open('test.log', 'w'),
            stderr=open('test.err', 'w'),
            pid_file='/usr/local/share/python/pandaemonium/test_pid',
            )
    daemon.start()
