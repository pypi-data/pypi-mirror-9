# -*- mode: conf; coding: utf-8 -*-
# {{project}} functional testing configuration

[app:main]
use = egg:{{package}}

desktop.title = {{project}}
desktop.version = test
desktop.debug = true
desktop.domain = {{package}}-client
desktop.manifest = /tmp/manifest.json

available_languages = en en_US

mako.directories = {{package}}:views

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes =
    pyramid_beaker
    pyramid_tm
    metapensiero.sqlalchemy.proxy.pyramid

session.type = file
session.data_dir = /tmp/sessions/data
session.lock_dir = /tmp/sessions/lock
session.key = {{project}}
session.secret = FooBar
session.cookie_on_exception = true

sqlalchemy.url = sqlite:///:memory:
