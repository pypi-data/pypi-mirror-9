<div class="dialog-box" id="prompt" i18n:domain="plone.app.workflowmanager">
  <h2 i18n:translate="">Update Security Settings</h2>

  <p class='discreet'
     i18n:translate="confirm_update_security_settings">
     	Are you sure you want to update the security settings
     	for all objects using this workflow in the portal?</p>

  <form action="@@workflowmanager-update-security-settings" method="POST"
        tal:define="errors view/errors">
    <input type="hidden" name="selected-workflow"
           tal:attributes="value view/selected_workflow/id" />
    <input tal:replace="structure context/@@authenticator/authenticator"/>

    <input name="form.actions.confirm" type="submit" class="context btn btn-primary"
           value="Yes" i18n:attributes="value" />
    <input name="form.actions.cancel" type="submit" class="context btn"
           value="Cancel" i18n:attributes="value" />

  </form>
  <br />
</div>