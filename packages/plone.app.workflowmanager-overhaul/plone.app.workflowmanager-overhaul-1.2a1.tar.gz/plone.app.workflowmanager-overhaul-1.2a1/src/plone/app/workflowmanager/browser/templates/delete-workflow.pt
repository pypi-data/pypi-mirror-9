<div class="dialog-box" id="prompt" tal:define="workflow view/selected_workflow"
    i18n:domain="plone.app.workflowmanager">
    <h2 i18n:translate="confirm_delete_workflow">
     Confirm Delete '<tal:replace i18n:name="title" tal:replace="workflow/title" />'</h2>

    <p class='discreet' i18n:translate="">
        Are you sure you want to delete this workflow?
    </p>

    <form action="@@workflowmanager-delete-workflow" method="POST">
        <input type="hidden" name="selected-workflow" tal:attributes="value view/selected_workflow/id" />
        <input tal:replace="structure context/@@authenticator/authenticator"/>

        <tal:condition tal:condition="not: view/can_delete">
            <dl class="portalMessage error">
                <dt i18n:translate="">Warning</dt>
                <dd><span i18n:translate="">You can not delete this workflow until no content types are specified to use this workflow.
                You can go into the</span> <a i18n:translate="" tal:attributes="href string:${view/context_state/portal_url}/@@types-controlpanel" target="_blank">types control panel</a>
                <span i18n:translate="">to reassign workflows or click on each of the listed types at the bottom and reassign those type's workflows individually.</span>
                </dd>
            </dl>
        </tal:condition>

        <tal:condition tal:condition="view/can_delete">
            <input type="submit" name="form.actions.delete" i18n:attributes="value" value="Delete" class="context btn btn-primary" />
        </tal:condition>
        <input type="submit" name="form.actions.cancel" i18n:attributes="value" value="Cancel" class="standalone btn" />

    </form>
    <br />

</div>