{% extends "sacrud/redefineme.jinja2" %}

{% block sa_body %}
    {% include 'sacrud/forms/create.jinja2' %}
{% endblock %}

{% block sa_head_extra_css %}{% endblock sa_head_extra_css %}

{% block sa_head_js %}
    {{ super() }}
    <!-- Deform -->
    <script type="text/javascript" src="{{ request.static_url('deform:static/scripts/deform.js') }}"></script>
    <script type="text/javascript">
        $.mask.definitions['h'] = "[A-Fa-f0-9]";
    </script>

    <!-- Special list for some fields -->
    {% for lib in js_list %}
        <script type="text/javascript" src="{{ request.static_url(lib) }}"></script>
    {% endfor %}

{% endblock %}

{% block sa_popup_content %}
    <div class="popup-inner__content-link">
        <a href="#" class="popup-inner__content-link-text">{{ _ps('close') }}</a>
    </div>
    {% if obj %}
        <div class="popup-inner__content-delete">
            <div class="popup-inner__content-title">{{ _ps('Are you sure you want to delete an object?') }}</div>
            <div class="popup-button">
                <div class="popup-button__item" data-status="delete">
                    <a href="{{ request.route_url('sa_delete', table=table.__tablename__, pk=pk_to_list(obj)) }}" class="popup-button__item-link">{{ _ps('Confirm') }}</a>
                </div>
                <div class="popup-button__item" data-status="cancel">
                    <span class="popup-button__item-name">{{ _ps('Cancel') }}</span>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="popup-inner__content-elfinder"></div>
{% endblock sa_popup_content %}
