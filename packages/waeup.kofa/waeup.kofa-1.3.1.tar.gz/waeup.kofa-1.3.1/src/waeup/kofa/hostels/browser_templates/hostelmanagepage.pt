<form action="." tal:attributes="action request/URL" method="POST"
      i18n:domain="waeup.kofa" enctype="multipart/form-data">

  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">
        <span i18n:translate="">Hostel Data</span>
      </a>
    </li>
    <li>
      <a href="#tab2" data-toggle="tab">
        <span i18n:translate="">Beds</span>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">
      <br />
      <table class="form-table">
      <tbody>
        <tal:widgets content="structure provider:widgets" />
        <tr>
          <td class="fieldname" i18n:translate="" >
            Reserved Beds:
          </td>
          <td>
            <tal:repeat repeat="bed context/beds_reserved" >
                <span tal:replace='bed'>BED</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </tal:repeat>
          </td>
        </tr>
      </tbody>
      </table>
      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.taboneactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>
    </div>

    <div id="tab2" class="tab-pane">
      <br />
      <table class="kofa-data-table dataTableManage">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th i18n:translate="">Id</th>
            <th i18n:translate="">Type</th>
            <th i18n:translate="">Number</th>
            <th i18n:translate="">Owner</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="value context/values">
             <td>
              <input type="checkbox" name="val_id"
        		  tal:attributes="value value/__name__" />
            </td>
            <td tal:content="value/bed_id">ID</td>
            <td tal:content="value/bed_type">TYPE</td>
            <td tal:content="value/bed_number">NUMBER</td>
            <td>
              <a tal:condition="python: value.owner != view.not_occupied"
                 tal:attributes="href python: '%s/%s/accommodation' %
                      (view.students_url,value.owner)">
                <span tal:content="value/owner">OWNER</span>
              </a>
              <a tal:condition="python: value.owner == view.not_occupied"
                 tal:attributes="href python: view.url(value)"
                 i18n:translate="">
              [allocate student]
              </a>
            </td>
          </tr>
        </tbody>
      </table>

      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.tabtwoactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>

    </div>
  </div>
</form>  



