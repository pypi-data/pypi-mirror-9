<form action="." tal:attributes="action request/URL"
    i18n:domain="waeup.kofa"
    method="POST" enctype="multipart/form-data">


  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab" i18n:translate="">
        Settings
      </a>
    </li>
    <li>
      <a href="#tab2" data-toggle="tab" i18n:translate="">
        Hostels
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">
      <br />
      <table class="form-table">
        <tbody>
          <tal:widgets content="structure provider:widgets" />
        </tbody>
      </table>
      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions" tal:omit-tag="">
          <input tal:condition="python:action.label in view.taboneactions"
            tal:replace="structure action/render"/>
        </span>
      </div>
    </div>
    <div id="tab2" class="tab-pane">
      <br />
      <table class="kofa-data-table dataTableManage">
        <thead>
          <tr>
            <th>&nbsp;
            </th>
            <th i18n:translate="">Id
            </th>
            <th i18n:translate="">Name
            </th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="hostel context/values"> <td>
              <input type="checkbox" name="val_id" tal:attributes="value hostel/hostel_id" /> </td> <td>
              <a tal:attributes="href python: view.url(hostel)" tal:content="hostel/__name__"> ID</a> </td> <td>
              <span tal:content="hostel/hostel_name">ID
              </span> </td>
          </tr>
        </tbody>
      </table>
      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions" tal:omit-tag="">
          <input tal:condition="python:action.label in view.tabtwoactions"
            tal:replace="structure action/render"/>
        </span>
      </div>
    </div>
  </div>
</form>