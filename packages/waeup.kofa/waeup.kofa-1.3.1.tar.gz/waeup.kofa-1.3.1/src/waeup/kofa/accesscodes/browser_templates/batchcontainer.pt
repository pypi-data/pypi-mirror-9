<form i18n:domain="waeup.kofa" method="POST">
  <p i18n:translate="">
    The following batches are available:
  </p>
  <table class="table">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th i18n:translate="">Prefix</th>
        <th i18n:translate="">Entries</th>
        <th i18n:translate="">Used</th>
        <th i18n:translate="">Disabled</th>
        <th i18n:translate="">Cost</th>
        <th i18n:translate="">Date of Creation</th>
        <th i18n:translate="">Creator</th>
      </tr>
    </thead>
    <tbody>
  <tr tal:repeat="batch context/values">
  <td>
    <input type="checkbox" name="batches" value="batch/prefix"
     tal:attributes="value batch/__name__"
     tal:condition="batch/num" />
  </td>
  <td>
    <span tal:replace="batch/prefix">APP</span>
    -
    <span tal:replace="batch/num">10</span>
  </td>
  <td>
    <span tal:replace="batch/entry_num">1012</span>
  </td>
  <td>
    <span tal:replace="batch/used_num">512</span>
  </td>
  <td>
    <span tal:replace="batch/disabled_num">112</span>
  </td>
  <td tal:content="batch/cost">12.12</td>
  <td tal:content="python: batch.creation_date.strftime('%Y-%m-%d %H:%M:%S')">
      2011-11-22 18:04:55
  </td>
  <td tal:content="batch/creator">SOMEUSER</td>
      </tr>
      <tr tal:condition="not: context/values">
      <td colspan="5"><b i18n:translate="">No batches yet</b></td>
      </tr>
    </tbody>
  </table>
  <input type="submit" class="btn btn-default" name="archive"
      tal:attributes="value view/archive_button" />
  <input type="submit" class="btn btn-default" name="delete"
       tal:attributes="value view/delete_button" />
</form>
