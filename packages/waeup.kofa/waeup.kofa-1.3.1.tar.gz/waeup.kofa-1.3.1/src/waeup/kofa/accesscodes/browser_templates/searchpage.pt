<form method="POST" i18n:domain="waeup.kofa" class="form-inline">
<br />
  <div class="form-group">
    <input type="submit" class="btn btn-primary" name="search"
        tal:attributes="value view/search_button" />
  <span i18n:translate="">for access codes</span>
  </div>
  <div class="form-group">
    <select name="searchtype" class="form-control">
      <option i18n:translate="" value="code">with PIN</option>
      <option i18n:translate="" value="batch_serial">with serial</option>
      <option i18n:translate="" value="history">with message term</option>
    </select>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="searchterm" />
  </div>
  <p>&nbsp;</p>
  <div tal:condition="view/hitlist">
    <h3>Search Results</h3>
    <input type="hidden" name="old_searchterm"
         tal:attributes="value view/searchterm" />
    <input type="hidden" name="old_searchtype"
         tal:attributes="value view/searchtype" />
    <table class="kofa-data-table dataTableManage">
      <thead>
      <tr>
        <th>&nbsp;</th>
        <th width="50px" i18n:translate="">Serial</th>
        <th i18n:translate="">AC</th>
        <th i18n:translate="">State</th>
        <th i18n:translate="">Owner</th>
        <th i18n:translate="">History</th>
      </tr>
      </thead>
      <tbody>
      <tr tal:repeat="item view/hitlist">
        <td><input type="checkbox" name="entries"
                   tal:attributes="value item/code" /></td>
        <td tal:content="item/batch_serial">1</td>
        <td tal:content="item/code">APP-1-1234567890</td>
        <td tal:content="item/translated_state">unused</td>
        <td tal:content="item/owner">Id</td>
          <td tal:content="structure python:item.history.replace('||','<br />')">
            history
          </td>
      </tr>
      </tbody>
    </table>
    <div>
      <input type="submit" class="btn btn-default" name="disable"
          tal:attributes="value view/disable_button" />
      <input type="submit" class="btn btn-default" name="enable"
          tal:attributes="value view/enable_button" />
      <input type="submit" class="btn btn-default" name="cancel"
          tal:attributes="value view/cancel_button" />
    </div>
  </div>
  <div tal:condition="not: view/hitlist">
    <input type="submit" class="btn btn-default" name="cancel"
        tal:attributes="value view/cancel_button" />
  </div>
</form>
