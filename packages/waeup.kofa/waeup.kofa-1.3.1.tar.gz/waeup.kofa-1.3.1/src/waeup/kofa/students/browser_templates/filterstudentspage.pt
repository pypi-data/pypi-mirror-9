<form  i18n:domain="waeup.kofa"  method="POST">
  <br />
  <label for="session">
    <span tal:replace="view/session_label">SESSION</span>
  </label>
  <select name="session" class="form-control half">
    <span tal:repeat="item view/sessions" tal:omit-tag="">
      <option
          tal:define="name python: item[1];
                      title python: item[0];
                      selected python: view.session_default == name"
          tal:attributes="value name; selected selected">
        <span tal:replace="title">TITLE</span>
      </option>
    </span>
  </select>
  <br />
  <label for="levels">
    <span tal:replace="view/level_label">LEVEL</span>
  </label>
  <select name="level" class="form-control half">
    <span tal:repeat="item view/levels" tal:omit-tag="">
      <option
          tal:define="name python: item[1];
                      title python: item[0];
                      selected python: view.level_default == name"
          tal:attributes="value name; selected selected">
        <span tal:replace="title">TITLE</span>
      </option>
    </span>
  </select>
  <br /><br />
  <input i18n:translate="" type="submit" class="btn btn-primary"
         name="SHOW" value="Show" />
  <a class="btn btn-default" href=""
     tal:attributes="href view/parent_url">Cancel</a>

  <br /><br />

  <div tal:condition="view/hitlist">
    <h3>
      ...
      <span tal:replace="view/session_string">SESSION</span>
      <span i18n:translate="">and</span>
      <span tal:replace="view/level_string">LEVEL</span>
    </h3>
    <table class="kofa-data-table dataTable">
      <thead>
    	<tr>
    	  <th i18n:translate="">Student Id</th>
        <th i18n:translate="">Matric No.</th>
        <th i18n:translate="">Fullname</th>
        <th i18n:translate="">Status</th>
        <th i18n:translate="">Certificate</th>
        <th i18n:translate="">Current Session</th>
        <th i18n:translate="">Current Level</th>
        <th i18n:translate="">Comment</th>
    	</tr>
      </thead>
      <tbody>
    	<tr tal:repeat="item view/hitlist">
    	  <td> <a tal:attributes="href item/url"
                target="_blank">
          <span tal:content="item/student_id">A123456</span></a>
        </td>
        <td tal:content="item/matric_number">MATRIC_NUMBER</td>
    	  <td tal:content="item/display_fullname">FULLNAME</td>
        <td tal:content="item/translated_state">STATE</td>
        <td>
          <a tal:attributes="href python: view.url(item.certificate)"
             tal:content="item/certificate/code">
             CERTIFICATE
          </a>
        </td>
        <td tal:content="item/current_session">SESSION</td>
        <td tal:content="item/current_level">LEVEL</td>
        <td><span tal:condition="item/comment">yes</span></td>
    	</tr>
      </tbody>
    </table>
  </div>
</form>
