<table class="form-table" i18n:domain="waeup.kofa">
  <tbody>
    <tal:widgets content="structure provider:widgets" />
    <tr tal:condition="context/grade">
      <td class="fieldname">
        <span i18n:translate="">Grade</span>:
      </td>
      <td>
        <span tal:replace="context/grade">C</span>
      </td>
    </tr>
    <tr tal:condition="python: context.weight is not None">
      <td class="fieldname">
        <span i18n:translate="">Weight</span>:
      </td>
      <td>
        <span tal:replace="context/weight">1</span>
      </td>
    </tr>
  </tbody>
</table>
