<form action="." tal:attributes="action request/URL" method="POST"
      i18n:domain="waeup.kofa" enctype="multipart/form-data">

  <table class="kofa-data-table dataTableManage">
    <thead>
    <tr>
      <th tal:condition="not: layout/isStudent">&nbsp;</th>
      <th i18n:translate="">Session</th>
      <th i18n:translate="">Booking Date</th>
      <th i18n:translate="">Bed Coordinates</th>
      <th i18n:translate="">Bed Category</th>
    </tr>
    </thead>
    <tbody>
      <tr tal:repeat="cl context/values">
         <td tal:condition="not: layout/isStudent">
          <input type="checkbox"
    		 name="val_id"
    		 tal:attributes="value cl/__name__" />
        </td>
        <td> <a tal:attributes="href python: view.url(cl)">
        <span tal:content="python: cl.getSessionString()">PID</span></a></td>
        <td tal:content="python: layout.formatDatetime(cl.booking_date)">DATE</td>
        <td tal:content="cl/display_coordinates">COORDINATES</td>
        <td tal:content="cl/bed_type">TYPE</td>
      </tr>
    </tbody>
  </table>

  <div tal:condition="view/availableActions">
    <span tal:repeat="action view/selected_actions"
          tal:omit-tag="">
      <input tal:replace="structure action/render"/>
    </span>
  </div>
</form>
