<form action="." tal:attributes="action request/URL" method="post"
      i18n:domain="waeup.kofa" enctype="multipart/form-data"
      autocomplete="off">

  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">
      <span i18n:translate="">Base Data</span></a>
    </li>
    <li>
      <a href="#tab2" data-toggle="tab">
        <span i18n:translate="">Passport Picture</span>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">
      <br />
      <table class="form-table">
        <tbody>
          <tal:widgets content="structure provider:widgets" />
          <tr>
            <td class="fieldname" i18n:translate="">Password:</td>
            <td>
              <input name="password" class="form-control" type="password"  />
            </td>
          </tr>
          <tr>
            <td class="fieldname" i18n:translate="">Retype Password:</td>
            <td>
              <input name="control_password" class="form-control" type="password" />
            </td>
          </tr>

        </tbody>
      </table>

      <div tal:condition="view/availableActions">
        <input tal:repeat="action view/actions"
               tal:replace="structure action/render"
               />
      </div>
    </div>

    <div id="tab2" class="tab-pane">
      <br />
      <table class="form-table">
        <tbody>
          <tal:files content="structure provider:files" />
        </tbody>
      </table>
    </div>
  </div>
</form>
