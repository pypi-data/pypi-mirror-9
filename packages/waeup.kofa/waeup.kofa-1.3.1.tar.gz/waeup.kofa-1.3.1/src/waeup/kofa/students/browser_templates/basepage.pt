<table i18n:domain="waeup.kofa" class="form-table">
  <tbody>
    <tal:block repeat="widget view/widgets">
      <tr>
        <td class="fieldname">
          <tal:block content="widget/label"/>:
        </td>
        <td>
          <input tal:replace="structure widget" />
        </td>
      </tr>
    </tal:block>
    <tr>
      <td class="fieldname" i18n:translate="">
          Password:
      </td>
      <td>
          <tal:password replace="view/hasPassword" />
      </td>
    </tr>
    <tal:files content="structure provider:files" />
  </tbody>
  <tfoot>
    <tr>
      <td>
        <input tal:repeat="action view/actions"
               tal:replace="structure action/render" />
      </td>
    </tr>
  </tfoot>
</table>
