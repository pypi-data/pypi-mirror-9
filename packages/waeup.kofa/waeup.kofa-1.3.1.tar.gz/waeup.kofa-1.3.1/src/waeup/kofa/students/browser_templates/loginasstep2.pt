<form action="." tal:attributes="action request/URL" method="post"
      enctype="multipart/form-data">
  <p i18n:translate="login_as_intro_2">
    The random password
    "<span i18n:name="password"
          tal:replace=view/password></span>"
    has been set. You can proceed by clicking the button below.
  </p>
  <input type="hidden" name="form.login" tal:attributes="value view/context/student_id" />
  <input type="hidden" name="form.password"   tal:attributes="value view/password" />
  <input class="btn btn-primary" type="submit" name="SUBMIT"
    tal:attributes="value view/login_button" />
</form>