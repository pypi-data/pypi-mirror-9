<form action="." tal:attributes="action request/URL" method="POST"
      i18n:domain="waeup.kofa" enctype="multipart/form-data">

  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">
        <span i18n:translate="">Study Course Data</span>
      </a>
    </li>
    <li t>
      <a href="#tab2" data-toggle="tab">
        <span i18n:translate="">Study Levels</span>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">
      <br />
      <table class="form-table">
      <tbody>
        <tal:widgets content="structure provider:widgets" />
      </tbody>
      </table>
      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.taboneactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>
    </div>

    <div id="tab2" class="tab-pane">
      <br />
      <table class="kofa-data-table dataTableManage">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th i18n:translate="">Level Code</th>
            <th i18n:translate="">Level Title</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="cl context/values">
             <td>
              <input type="checkbox"
        		 name="val_id"
        		 tal:attributes="value cl/__name__" />
            </td>
            <td> <a tal:attributes="href python:view.url(cl)">
              <span tal:content="cl/level">CODE</span></a>
            </td>
            <td>
              <span tal:content="cl/level_title">TITLE</span>
            </td>
          </tr>
        </tbody>
      </table>

      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.tabtwoactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>
      <br /><br /><br />


      <div class="form-inline">
        <span tal:condition="view/availableActions">
          <div tal:repeat="action view/actions"
              class="form-group">
              <input tal:condition="python:action.label in view.tabthreeactions"
                     tal:replace="structure action/render"/>
          </div>
        </span>
        <div class="form-group">
          <select id="addlevel" name="addlevel" class="form-control">
            <option tal:attributes="value level/code" tal:repeat="level view/level_dicts">
              <span tal:replace="level/title">LEVELTITLE
            </span>
            </option>
          </select>
        </div>
        &nbsp;&nbsp;<span i18n:translate="">in session</span>&nbsp;&nbsp;
        <div class="form-group">
          <select id="level_session" name="level_session" class="form-control">
            <option tal:attributes="value session/code" tal:repeat="session view/session_dicts">
              <span tal:replace="session/title">LEVELSESSION
            </span>
            </option>
          </select>
        </div>
      </div>

    </div>
  </div>
</form>  



