<tr i18n:domain="waeup.kofa">
  <td class="fieldname">
    <span tal:replace="viewlet/label">FILENAME</span>:
  </td>
  <td>
    <img align="middle" height="125px"
         tal:attributes="src python: view.url(context, viewlet.download_name)" />
    &nbsp;
    <input type="submit" tal:condition="viewlet/file_exists"
     tal:attributes="id python:('delete_%s' % viewlet.input_name);
        name python:('delete_%s' % viewlet.input_name)"
     value="Delete" class="btn btn-danger" />
    <br /><br />

		<div class="input-group">
			<div class="input-group-btn">
				<div class="btn btn-default btn-file">
          Select new file&hellip;
          <input type="file" tal:attributes="name viewlet/input_name" />
        </div>
			</div>
			<input type="text" class="form-control" readonly>
      <div class="input-group-btn">
        <input type="submit"
               tal:attributes="id python:('upload_%s' % viewlet.input_name);
                name python:('upload_%s' % viewlet.input_name);
                value viewlet/upload_button"
               class="btn btn-primary" />
        (<span tal:replace="viewlet/max_upload_size">10 kB</span> max.)
      </div>
    </div>
  </td>
</tr>