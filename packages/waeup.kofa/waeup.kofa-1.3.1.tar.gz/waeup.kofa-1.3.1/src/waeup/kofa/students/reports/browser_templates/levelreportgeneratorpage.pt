<form  i18n:domain="waeup.kofa"  method="POST">
  <p i18n:translate="">
    Please pick the department, session and level
    for which the report should be generated.
    The report will be processed and then made available for you
    to view/download.
  </p>
  <br />
  <label for="session" i18n:translate="">Department</label>
  <select name="faccode_depcode" class="form-control half">
    <span tal:repeat="items view/faccode_depcodes" tal:omit-tag="">
      <option
          tal:define="name python: items[1]; title python: items[0]"
          tal:attributes="value name">
        <span tal:replace="title">TITLE</span>
      </option>
    </span>
  </select>
  <br />
  <label for="session">Academic Session</label>
  <div class="input">
    <select name="session" i18n:translate="" class="form-control half">
      <span tal:repeat="items view/sessions" tal:omit-tag="">
        <option
            tal:define="name python: items[1]; title python: items[0]"
            tal:attributes="value name">
          <span tal:replace="title">TITLE</span>
        </option>
      </span>
    </select>
  </div>
  <br />
  <label for="session">Level</label>
  <select name="level" i18n:translate="" class="form-control half">
    <span tal:repeat="items view/levels" tal:omit-tag="">
      <option
          tal:define="name python: items[1]; title python: items[0]"
          tal:attributes="value name">
        <span tal:replace="title">TITLE</span>
      </option>
    </span>
  </select>
  <br />
  <input i18n:translate="" type="submit" class="btn btn-primary"
         name="CREATE" value="Create" />
  <a class="btn btn-default" href=""
     tal:attributes="href view/parent_url">Cancel</a>
</form>
