<form action="." tal:attributes="action request/URL" method="POST"
      i18n:domain="waeup.kofa" enctype="multipart/form-data">

  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">
        <span i18n:translate="">Study Level Data</span>
      </a>
    </li>
    <li>
      <a href="#tab2" data-toggle="tab">
        <span i18n:translate="">Course Tickets</span>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">
      <br />
      <table class="form-table">
      <tbody>
        <tal:widgets content="structure provider:widgets" />
      </tbody>
      </table>
      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.taboneactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>
    </div>

    <div id="tab2" class="tab-pane">
      <br /><br />
      <table class="kofa-data-table dataTableManage">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th i18n:translate="">Term</th>
            <th i18n:translate="">Code</th>
            <th i18n:translate="">Title</th>
            <th i18n:translate="">Dept.</th>
            <th i18n:translate="">Fact.</th>
            <th i18n:translate="">Cred.</th>
            <th i18n:translate="">Requ.</th>
            <th i18n:translate="">Score</th>
            <th i18n:translate="">CO</th>
            <th i18n:translate="">Auto</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="value view/translated_values">
            <td>
              <input type="checkbox" name="val_id"
        		  tal:attributes="value value/__name__" />
            </td>
            <td tal:content="value/semester" nowrap>TERM</td>
            <td> <a tal:attributes="href value/url">
            <span tal:content="value/code">CODE</span>
            </a></td>
            <td tal:content="value/title">TITLE</td>
            <td tal:content="value/dcode">DEPARTMENT</td>
            <td tal:content="value/fcode">FACULTY</td>
            <td tal:content="value/credits">CREDITS</td>
            <td tal:content="value/mandatory">MANDATORY</td>
            <td tal:content="value/score|nothing">SCORE</td>
            <td tal:content="value/carry_over">CO</td>
            <td tal:content="value/automatic">AUTO</td>
          </tr>
        </tbody>
      </table>

      <div tal:condition="view/availableActions">
        <span tal:repeat="action view/actions"
              tal:omit-tag="">
          <input tal:condition="python:action.label in view.tabtwoactions"
                 tal:replace="structure action/render"/>
        </span>
      </div>
      <br /><br /><br />
      <div class="form-inline">
        <div class="form-group">
            <input class="btn btn-primary" type="submit" name="ADD"
                   i18n:translate=""
                   value="Add course ticket" />
        </div>
        <div class="form-group">
            <input type="text" name="course" class="form-control"
                   tal:attributes="placeholder view/placeholder" />
        </div>
      </div>
      <br />
      <p i18n:translate="">
        You don't know the course code? Then select a course
        <a href="add">here</a>.
      </p>

    </div>
  </div>
</form>



