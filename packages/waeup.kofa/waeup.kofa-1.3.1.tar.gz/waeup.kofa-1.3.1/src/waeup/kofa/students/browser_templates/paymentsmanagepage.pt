<form action="." tal:attributes="action request/URL" method="POST"
      i18n:domain="waeup.kofa" enctype="multipart/form-data">

  <table class="kofa-data-table dataTableManage">
    <thead>
    <tr>
      <th>&nbsp;</th>
      <th i18n:translate="">Payment Id</th>
      <th i18n:translate="">Creation Date</th>
      <th i18n:translate="">Payment Date</th>
      <th i18n:translate="">Category</th>
      <th i18n:translate="">Item</th>
      <th i18n:translate="">Amount</th>
      <th i18n:translate="">Session</th>
      <th i18n:translate="">State</th>
    </tr>
    </thead>
    <tbody>
      <tr tal:repeat="cl context/values">
         <td>
          <input type="checkbox"
    		 name="val_id"
    		 tal:attributes="value cl/__name__"
         tal:condition="python: not view.unremovable(cl)" />
        </td>
        <td> <a tal:attributes="href python: view.url(cl)">
        <span tal:content="cl/p_id">PID</span></a></td>
        <td tal:content="python: layout.formatDatetime(cl.creation_date)">CREATION DATE</td>
        <td tal:content="python: layout.formatDatetime(cl.payment_date)">PAYMENT DATE</td>
      <td nowrap tal:content ="cl/category">CATEGORY</td>
      <td tal:content ="cl/display_item">ITEM</td>
      <td tal:content ="cl/amount_auth">AMOUNT</td>
      <td tal:content ="cl/p_session">SESSION</td>
      <td tal:content ="cl/p_state_title">STATE</td>
      </tr>
    </tbody>
  </table>

  <div tal:condition="python: view.availableActions and view.manage_payments_allowed">
    <span tal:repeat="action view/actions"
          tal:omit-tag="">
      <input tal:replace="structure action/render"/>
    </span>
  </div>
</form>
