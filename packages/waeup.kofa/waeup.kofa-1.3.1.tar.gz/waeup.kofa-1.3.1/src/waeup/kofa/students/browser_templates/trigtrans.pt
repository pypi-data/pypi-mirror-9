<form action="." tal:attributes="action request/URL" method="post"
      i18n:domain="waeup.kofa" enctype="multipart/form-data"
      autocomplete="off">

    <br />

    <select id="transition" name="transition" class="form-control half">
      <option tal:repeat="transition view/getTransitions"
              tal:attributes="value transition/name">
        <span tal:replace="transition/title">TRANSITIONTITLE</span>
      </option>
    </select>
    <br /><br />
    <div tal:condition="view/availableActions">
      <input tal:repeat="action view/actions"
             tal:replace="structure action/render"
             />
    </div>
</form>
