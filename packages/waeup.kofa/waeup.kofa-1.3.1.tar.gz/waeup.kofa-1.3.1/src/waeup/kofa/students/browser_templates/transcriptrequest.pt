<form method="POST" i18n:domain="waeup.kofa">

  <ul class="tabs nav nav-tabs" data-tabs="tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">
        <span i18n:translate="">Send new request</span>
      </a></li>
    <li>
      <a href="#tab2" data-toggle="tab">
        <span i18n:translate="">View correspondence</span>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="tab1" class="active tab-pane">

      <p i18n:translate="transcript_request"></p>

      <table class="form-table" tal:condition="view/with_ac">
        <tbody>
          <tr>
            <td i18n:translate="" class="fieldname">
              Cover Letter:
            </td>
            <td>
              <textarea cols="60" name="comment" rows="6"></textarea>
            </td>
          </tr>
          <tr>
            <td i18n:translate="" class="fieldname">
              Dispatch Address:
            </td>
            <td>
              <textarea cols="60" name="address" rows="6"></textarea>
            </td>
          </tr>
          <tr>
            <td i18n:translate="">
              Activation Code:
            </td>
            <td>
              <span tal:replace="view/ac_prefix">PIN Prefix</span> -
              <input name="ac_series" type="text" maxlength="3"
                     class="ac-input ac-series"
                     value="" tal:attributes="value view/ac_series"/> -
              <input name="ac_number" type="text" maxlength="10"
                     class="ac-input ac-number"
                     value="" tal:attributes="value view/ac_number" />
              <font color="red"><span tal:replace="view/notice">Notice</span>
              </font>
            </td>
          </tr>
          <tr>
            <td>&nbsp;</td>
            <td i18n:translate="">
            The activation code can be found on the payment slip.
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <input type="submit" name="SUBMIT" class="btn btn-primary"
                     tal:attributes="value view/buttonname" />
            </td>
          </tr>
        </tbody>
      </table>
      <span tal:omit-tag="" tal:condition="not: view/with_ac">
        <input type="submit" name="SUBMIT" class="btn btn-primary"
               tal:attributes="value view/buttonname" />
      </span>
    </div>

    <div id="tab2" class="tab-pane">
      <p tal:content="structure view/correspondence"></p>
    </div>
  </div>

</form>
