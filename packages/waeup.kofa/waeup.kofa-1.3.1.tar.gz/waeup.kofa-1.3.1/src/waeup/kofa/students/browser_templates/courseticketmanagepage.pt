<form action="." tal:attributes="action request/URL" method="post"
      enctype="multipart/form-data">

  <table class="form-table">
    <tbody>
      <tal:widgets content="structure provider:widgets" />

      <tr tal:condition="context/grade">
        <td class="fieldname">
          <span i18n:translate="">Grade</span>:
        </td>
        <td>
          <span tal:replace="context/grade">C</span>
        </td>
      </tr>
      <tr tal:condition="python: context.weight is not None">
        <td class="fieldname">
          <span i18n:translate="">Weight</span>:
        </td>
        <td>
          <span tal:replace="context/weight">1</span>
        </td>
      </tr>

    </tbody>
  </table>
  <div tal:condition="view/availableActions">
    <input tal:repeat="action view/actions"
           tal:replace="structure action/render"
           />
  </div>
</form>
