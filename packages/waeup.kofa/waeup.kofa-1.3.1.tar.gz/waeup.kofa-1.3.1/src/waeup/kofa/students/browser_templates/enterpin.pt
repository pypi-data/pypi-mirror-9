<form method="POST" i18n:domain="waeup.kofa">
  <table class="form-table" tal:condition="view/with_ac">
    <tbody>
      <tr>
        <td i18n:translate="">
        Activation Code:
        </td>
        <td>
        <span tal:replace="view/ac_prefix">PIN Prefix</span> -
        <input name="ac_series" type="text" maxlength="3"
               class="ac-input ac-series"
               value="" tal:attributes="value view/ac_series"/> -
        <input name="ac_number" type="text" maxlength="10"
               class="ac-input ac-number"
               value="" tal:attributes="value view/ac_number" />
        <font color="red"><span tal:replace="view/notice">Notice</span>
        </font>
        </td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td i18n:translate="">
        The activation code can be found on the payment slip.
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" name="SUBMIT" class="btn btn-primary"
                 tal:attributes="value view/buttonname" />
        </td>
      </tr>
    </tbody>
  </table>

  <span tal:omit-tag="" tal:condition="not: view/with_ac">
    <p i18n:translate="">
      Your data have been approved. You can continue by
      clicking the button below.
    </p>
    <input type="submit" name="SUBMIT" class="btn btn-primary"
           tal:attributes="value view/buttonname" />
  </span>
</form>
