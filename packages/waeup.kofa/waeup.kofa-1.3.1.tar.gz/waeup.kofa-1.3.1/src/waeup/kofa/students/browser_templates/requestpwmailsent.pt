<tal:only_email condition = "not: view/password" i18n:domain="waeup.kofa">
  <p tal:condition = "view/email">
    <span i18n:translate=""> An email with your user name and password
    has been sent to
    </span>
    <span tal:replace="view/email">user@foo.baz</span>.
  </p>
  <p tal:condition = "view/email" i18n:translate="">
    Please check your email account to proceed.
  </p>
  <p tal:condition = "not: view/email" i18n:translate="">
    Email could not been sent. Please retry later.
  </p>
  <p  i18n:translate="">
    Thanks for using Kofa!
  </p>
</tal:only_email>

<tal:credentials condition = "view/password" i18n:domain="waeup.kofa">
  <h3 i18n:translate="">Your login credentials are:</h3>
  <table class="bordered-table span6">
    <tr>
      <td i18n:translate="">User Name:</td>
      <td tal:content="view/applicant_id">ID</td>
    <tr>
    <tr>
      <td i18n:translate="">Password:</td>
      <td tal:content="view/password">PASSWORD</td>
    <tr>
  </table>
  <p>
    <span i18n:translate="">Print this page and proceed to the</span>
    <a tal:attributes="href python: view.url(layout.site, 'login')">login form</a>.
    <span i18n:translate="">Please note that passwords are case-sensitive,
    <br />when entering your credentials, and keep your password secret!
    </span>
  </p>
  <p tal:condition = "view/email">
    <span i18n:translate=""> An email with your user name and password
    has been sent to
    </span>
    <span tal:replace="view/email">user@foo.baz</span>.
  </p>
  <p  i18n:translate="">
    Thanks for using Kofa!
  </p>
</tal:credentials>
