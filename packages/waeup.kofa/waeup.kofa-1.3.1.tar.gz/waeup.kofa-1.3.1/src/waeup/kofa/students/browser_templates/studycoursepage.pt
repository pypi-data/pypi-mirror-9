<table class="form-table" i18n:domain="waeup.kofa">
  <thead>
  </thead>
  <tbody>
    <tal:block repeat="widget view/widgets">
      <tr>
        <td class="fieldname">
          <span tal:content="widget/label">label</span>:
        </td>
        <td tal:on-error="default">
          <div tal:content="structure widget">
            <input type="text" />
          </div>
        </td>
      </tr>
    </tal:block>
      <tr>
        <td i18n:translate="">
            Study Mode:
        </td>
        <td>
          <div tal:content="view/current_mode">
          CURRENTMODE
          </div>
        </td>
      </tr>
      <tr tal:condition="python: view.department is not None">
        <td i18n:translate="">
            Department:
        </td>
        <td>
          <a tal:attributes="href python: view.url(view.department)"
               tal:content="view/department/longtitle">
            DEPARTMENT
          </a>
        </td>
      </tr>
      <tr tal:condition="python: view.faculty is not None">
        <td i18n:translate="">
            Faculty:
        </td>
        <td>
          <a tal:attributes="href python: view.url(view.faculty)" 
               tal:content="view/faculty/longtitle">
            FACULTY
          </a>
        </td>
      </tr>
      <tr tal:condition="view/prev_studycourses">
        <td i18n:translate="">
            Previous Study Courses:
        </td>
        <td>
          <span tal:repeat="value view/prev_studycourses">
            <a tal:attributes="href value/href" tal:content="value/title">
              FACULTY
            </a>
          </span>
        </td>
      </tr>
  </tbody>
</table>

<h3 i18n:domain="waeup.kofa" i18n:translate="">Study Levels (Course Lists)</h3>

<table i18n:domain="waeup.kofa" class="table">
  <thead>
    <tr>
      <th i18n:translate="">Level Code</th>
      <th i18n:translate="">Level Title</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="value context/values">
      <td> <a tal:attributes="href python:view.url(value)">
      <span tal:content="value/level">CODE</span></a></td>
      <td tal:content="value/level_title">TITLE</td>
    </tr>
  </tbody>
</table>


<div tal:condition="python: not len(context.keys())"
    i18n:domain="waeup.kofa" i18n:translate="">
  There are no levels registered yet.
</div>