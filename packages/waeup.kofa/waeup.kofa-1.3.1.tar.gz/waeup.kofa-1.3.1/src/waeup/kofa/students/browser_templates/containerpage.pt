<form method="POST" i18n:domain="waeup.kofa" class="form-inline">
<br />
  <div class="form-group">
    <input class="btn btn-primary" type="submit" name="search"
      tal:attributes="value view/search_button" />
  </div>
  <div class="form-group">
    <select name="searchtype" class="form-control">
      <option i18n:translate="" value="student_id">with id</option>
      <option i18n:translate="" value="fullname">with name</option>
      <option i18n:translate="" value="reg_number">with registration number</option>
      <option i18n:translate="" value="matric_number">with matriculation number</option>
      <option i18n:translate="" value="current_session">in session</option>
      <option i18n:translate="" value="depcode">in department</option>
      <option i18n:translate="" value="current_mode">in study mode</option>
      <option i18n:translate="" value="suspended">
        with deactivated account (search term omitted)
      </option>
      <option i18n:translate="" value="transcript">
        who requested transcript (search term omitted)
      </option>
    </select>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="searchterm" />
  </div>
</form>
<br />
<div tal:condition="view/hitlist">
  <h3 i18n:translate="">Search Results</h3>
  <input type="hidden" name="old_searchterm"
       tal:attributes="value view/searchterm" />
  <input type="hidden" name="old_searchtype"
       tal:attributes="value view/searchtype" />
  <table class="kofa-data-table dataTable">
    <thead>
    <tr>
      <th i18n:translate="">Student Id</th>
      <th i18n:translate="">Reg. Number</th>
      <th i18n:translate="">Matric. Number</th>
      <th i18n:translate="">State</th>
      <th i18n:translate="">Full Name</th>
    </tr>
    </thead>
    <tbody>
    <tr tal:repeat="item view/hitlist">
      <td> <a tal:attributes="href item/url">
        <span tal:content="item/student_id">A123456</span></a>
      </td>
      <td class="center"> <a tal:attributes="href item/url">
        <span tal:content="item/reg_number">9999999</span></a>
      </td>
      <td class="center"> <a tal:attributes="href item/url">
        <span tal:content="item/matric_number">9999999</span></a>
      </td>
      <td tal:content="item/state">admitted</td>
      <td tal:content="item/display_fullname">Bob</td>
    </tr>
    </tbody>
  </table>
</div>

