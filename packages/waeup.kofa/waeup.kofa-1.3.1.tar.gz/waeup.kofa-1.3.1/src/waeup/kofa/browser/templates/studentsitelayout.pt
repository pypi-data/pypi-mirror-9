<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" i18n:domain="waeup.kofa">
  <head>
    <title i18n:translate="">
      WAeUP.Kofa - Student Management System
    </title>
    <!--base href="http://localhost:8080/app/@@page"
     tal:attributes="href python: view.url(layout.site)" / -->
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="robots" content="index, follow" />
    <link rel="stylesheet" media="only screen and (max-device-width: 480px)"
        tal:attributes="href python: view.url(layout.site, '@@/waeup.kofa.browser/mobile.css')"
        type="text/css" />
    <link rel="alternate" type="application/rss+xml" title="RSS"
        href="http://www.example.net/feed.rss"
        tal:attributes="title string:RSS feed of ${layout/getAppTitle};
            href python: view.url(layout.site, 'feed.rss')" />
  </head>

  <!-- Diazo element-->
  <body class="kofa-body">

    <!-- Diazo element-->
    <a class="kofa-brand-link" href="#"
        tal:attributes="href python: view.url(layout.site)"
        tal:content="layout/getAppAcronym">ACRONYM</a>
    <!-- /Diazo element-->

    <!-- Diazo element-->
    <ul class="nav kofa-navbar-left">
        <tal:primary_nav content="structure provider:primary_nav" />
        <tal:primary_nav content="structure provider:primary_nav_student" />
    </ul>
    <!-- /Diazo element-->

    <!-- Diazo element-->
    <ul class="nav secondary-nav kofa-navbar-right">
      <li tal:condition="not: layout/isAuthenticated">
      <a href="#" i18n:translate=""
         tal:attributes="href python: view.url(layout.site, 'login')">
          Login
      </a>
      </li>
      <li tal:condition="layout/isAuthenticated">
      <a href="#" i18n:translate=""
         tal:attributes="href python: view.url(layout.site, '@@contactadmin')">
          Contact
      </a>
      </li>
      <li tal:condition="layout/isAuthenticated">
      <a href="#" i18n:translate=""
         tal:attributes="href python: view.url(context, '@@logout')">
         Logout
      </a>
      </li>
    </ul>
    <!-- Diazo element-->

    <span tal:define="langs provider:languages"
          tal:condition="langs"
          class="language">
      <tal:languages tal:content="structure langs" /> |
    </span>

    <!-- Diazo element-->
    <ul class="breadcrumb" tal:condition="layout/isAuthenticated">
      <tal:breadcrumbs
            tal:condition="python: layout.isAuthenticated()"
            tal:content="structure provider:breadcrumbs" />
    </ul>
    <!-- /Diazo element-->

    <!-- Diazo element-->
    <span tal:condition="layout/getStudentName">
      <div class="wfstatus">
            <span tal:replace="python:context.student.student_id">
              Id
            </span>
            &bull;
            <span tal:replace="python:context.student.translated_state">
              State
            </span>
      </div>
    </span>
    <!-- /Diazo element-->

    <!-- Diazo element-->
    <div class="kofa-content">
      <div class="actionbar" tal:condition="provider:actionbar">
        <tal:actionbar content="structure provider:actionbar" />&nbsp;
      </div>
      <div tal:define="message context/@@messages"
           tal:condition="python: len(message)>11">
        <div tal:content="structure message">
        </div>
      </div>
      <div class="alert alert-danger"
        tal:define="status view/status|nothing"
        tal:condition="status">
        <span tal:content="view/status">
          FORM STATUS SUMMARY
        </span>:
        <ul id="alert-error" tal:condition="view/errors">
          <li tal:repeat="error view/error_views">
             <span tal:replace="structure error">Error Type</span>
          </li>
        </ul>
      </div>
      <h1 class="kofa-content-label"
          tal:condition="view/label|nothing"
          tal:content="structure view/label">Label</h1>
      <div tal:content="structure view/content">
        THE CONTENT
      </div>
      <br />
    </div>
    <!-- /Diazo element-->

  </body>
  <!-- /Diazo element-->

</html>
