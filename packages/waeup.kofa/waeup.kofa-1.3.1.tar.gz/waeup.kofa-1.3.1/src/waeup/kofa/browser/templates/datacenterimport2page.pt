<h3 i18n:domain="waeup.kofa" i18n:translate="">Step 2</h3>
<form i18n:domain="waeup.kofa" method="POST">
  <p>
    <b i18n:translate="">File:</b>
    <span tal:content="view/filename">Filename.csv</span>
    <input type="hidden" name="filename" tal:attributes="value view/filename" />
  </p>
  <p i18n:translate="">
    Please select a file-processor and a processing-mode from the selections below.
  </p>
  <table tal:define="prev_table view/getPreviewTable;" class="table table-condensed">
    <thead>
      <tr>
        <th i18n:translate="">Header</th>
        <th i18n:translate="">Sample Record 1</th>
        <th i18n:translate="">Sample Record 2</th>
        <th i18n:translate="">Sample Record 3</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="row prev_table">
        <td tal:repeat="value row"
            tal:content="value"> value
        </td>
      </tr>
    </tbody>
  </table>
  <div> <b i18n:translate="">Processor:</b>
    <select name="importer" class="form-control">
      <option tal:repeat="importer view/getImporters"
          tal:attributes="value importer/name;
              selected python: importer['name'] == view.importer and 'selected' or ''"
          tal:content="importer/title"> Some Importer
      </option>
    </select>
  </div>
  <p>&nbsp;
  </p>
  <div> <b i18n:translate="">Mode:</b>
    <input type="radio" name="mode" value="create" checked="checked"
       tal:attributes="checked python: view.mode == 'create' and 'checked' or '';
        disabled python: view.mode != 'create' and view.mode_locked and 'disabled' or ''" />
        Create  &nbsp;&nbsp;
    <input type="radio" name="mode" value="update"
       tal:attributes="checked python: view.mode == 'update' and 'checked' or '';
        disabled python: view.mode != 'update' and view.mode_locked and 'disabled' or ''" />
        Update  &nbsp;&nbsp;
    <input type="radio" name="mode" value="remove"
       tal:attributes="checked python: view.mode == 'remove' and 'checked' or '';
        disabled python: view.mode != 'remove' and view.mode_locked and 'disabled' or ''" />
        Remove
    <p>&nbsp;
    </p>
  </div>
  <input class="btn btn-default" type="submit" name="cancel" tal:attributes="value view/cancel_button" />
  <input class="btn btn-danger" type="submit" name="back1" tal:attributes="value view/back_button" />
  <input class="btn btn-primary"
    tal:attributes="disabled python: view.getWarnings() and 'disabled' or ''; value view/proceed_button"
    type="submit" name="proceed" />
</form>
