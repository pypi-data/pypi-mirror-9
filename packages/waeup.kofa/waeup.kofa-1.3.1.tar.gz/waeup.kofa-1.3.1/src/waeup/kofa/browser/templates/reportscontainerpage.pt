<table i18n:domain="waeup.kofa" class="table">
  <thead>
    <tr>
      <th i18n:translate="">Report Number</th>
      <th i18n:translate="">Description</th>
      <th i18n:translate="">Creator</th>
      <th i18n:translate="">Creation Date</th>
      <th i18n:translate="">Status</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="entry view/entries">
      <td>
        <span tal:replace="python: entry[0]">12</span>
      </td>
      <td>
        <span tal:replace="python: entry[1]">REPORT DESCRIPTION</span>
      </td>
      <td>
        <span tal:replace="python: entry[7]">CREATOR</span>
      </td>
      <td nowrap>
        <span tal:replace="python: entry[6]">DATETIME</span>
      </td>
      <td>
        <span tal:replace="python: entry[2]">STATUS</span>
      </td>
      <td nowrap>
        <form method="POST">
          <input type="hidden" name="job_id"
                 tal:attributes="value python: entry[0]" />
          <input type="submit" class="btn btn-sm btn-primary"
                 name="DOWNLOAD" value="Download"
                 tal:condition="python: entry[4]" />
          <input type="submit" class="btn btn-sm btn-default"
                 name="DISCARD" value="Discard"
                 tal:condition="python: entry[3]" />
          <a href="" class="btn btn-sm btn-default" i18n:translate=""
             tal:condition="python: entry[5]">
            <img src="/static/img/actionicon_reload.png" />
            Reload
          </a>
        </form>
      </td>
    </tr>
  </tbody>
</table>
<form method="POST" i18n:domain="waeup.kofa">
  <a tal:attributes="href python:view.url(context, 'create')"
     class="btn btn-primary" i18n:translate="">
    Create new report
  </a>
</form>
