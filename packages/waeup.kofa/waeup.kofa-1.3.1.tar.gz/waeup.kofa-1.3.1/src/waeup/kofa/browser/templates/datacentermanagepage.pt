<form  i18n:domain="waeup.kofa" method="POST">

  <br />
  <div class="form-group">
    <label i18n:translate="">Storage path</label>
        <input type="text" name="newpath" class="form-control"
               tal:attributes="value context/storage" />
  </div>

  <div class="checkbox">
    <label>
      <input type="checkbox" name="move"  checked="checked">
      Copy existing data to new storage?
    </label>
  </div>

  <div class="checkbox">
    <label>
      <input type="checkbox" name="overwrite">
      Overwrite contents in new location?
    </label>
  </div>

  <input class="btn btn-primary" type="submit" name="save"
      tal:attributes="value view/save_button" />
  <input class="btn btn-default" type="reset" name="reset"
      tal:attributes="value view/reset_button" />
  <input class="btn btn-default" type="submit" name="cancel"
      tal:attributes="value view/cancel_button" />
</form>
