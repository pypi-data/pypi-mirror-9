<tr i18n:domain="waeup.kofa" tal:condition = "viewlet/show_viewlet">
  <td class="fieldname">
    <span tal:replace="viewlet/label">FILENAME</span>:
  </td>
  <td>

    <tal:file tal:condition="viewlet/file_exists">
      <a tal:attributes="href python: view.url(context, viewlet.download_name)"
         tal:content="viewlet/download_filename"
         target="image">
        LINK
      </a>&nbsp;
      <input type="submit"
             tal:attributes="id python:('delete_%s' % viewlet.input_name);
                name python:('delete_%s' % viewlet.input_name);
                value viewlet/delete_button;
                onclick python:'return window.confirm(\'%s\')' % view.deletion_warning"
             class="btn btn-danger btn-xs"/>
    </tal:file>

		<div class="input-group" tal:condition="not: viewlet/file_exists">
			<div class="input-group-btn">
				<div class="btn btn-default btn-file">
          Select new file&hellip;
          <input type="file" tal:attributes="name viewlet/input_name" />
        </div>
			</div>
			<input type="text" class="form-control" readonly>
      <div class="input-group-btn">
        <input type="submit"
               tal:attributes="id python:('upload_%s' % viewlet.input_name);
                name python:('upload_%s' % viewlet.input_name);
                value viewlet/upload_button"
               class="btn btn-primary" />
        (<span tal:replace="viewlet/max_upload_size">10 kB</span> max.)
      </div>
    </div>
  </td>
</tr>