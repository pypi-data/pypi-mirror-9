<h1>Running and Completed Jobs</h1>
<div>
  <form method="POST">
    <input type="submit" class="btn primary" name="RELOAD" value="reload" />
    <input type="submit" class="btn secondary"
	   name="START_NEW" value="start new test job" />
  </form>
</div>
<hr />

<div tal:repeat="job view/jobs">
  <div>
    JOB
    <a href="" tal:attributes="href job/link">
      <span tal:replace="job/job_id">12</span>
    </a>
    status: <span tal:replace="job/status">new</span>
    <div>
      &nbsp;&nbsp;
      <span class="span3">begin by:</span>
      <span tal:content="job/begin_by"></span>
    </div>
    <div>
      &nbsp;&nbsp;
      <span class="span3">begin after:</span>
      <span tal:content="job/begin_after"></span>
    </div>
    <div>
      &nbsp;&nbsp;
      <span class="span3">annotations:</span>
      <span tal:content="job/annotations"></span>
    </div>
    <div>
      &nbsp;&nbsp;
      <span class="span3">failure:</span>
      <span tal:content="job/failure"></span>
    </div>
  </div>
  <form tal:condition="job/removable" method="POST">
    <input type="submit" class="btn secondary" name="REMOVE" value="Remove" />
    <input type="hidden" name="job_id"
	   tal:attributes="value job/job_id" />
  </form>
  <hr />
</div>
