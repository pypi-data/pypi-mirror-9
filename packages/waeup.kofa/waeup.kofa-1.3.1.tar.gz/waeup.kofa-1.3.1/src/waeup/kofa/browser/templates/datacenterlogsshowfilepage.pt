<form method="post" class="form-horizontal">
  <input type="text" name="query" class="form-control"
	 tal:attributes="value view/query; placeholder view/placeholder" />
  <input class="btn btn-primary" type="submit" name="search"
	 tal:attributes="value view/search_button" />
  <input class="btn btn-default" type="submit" name="back"
	 tal:attributes="value view/back_button" />
  <input type="hidden" name="logname"
	 tal:attributes="value view/filename" />
</form>

<div tal:condition="view/result|nothing">
  <pre tal:content="structure view/result">
    GREPRESULT
  </pre>
</div>
