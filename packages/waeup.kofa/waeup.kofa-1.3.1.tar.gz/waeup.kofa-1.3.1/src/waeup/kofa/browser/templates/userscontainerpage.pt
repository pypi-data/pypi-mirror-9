<table i18n:domain="waeup.kofa" class="kofa-data-table dataTable">
  <thead>
    <tr>
      <th i18n:translate="">Id</th>
      <th i18n:translate="">Name</th>
      <th i18n:translate="">Portal Roles</th>
      <th i18n:translate="">Local Roles</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="account context/values">
      <td tal:content="account/name">USERNAME</td>
      <td tal:content="account/title">TITLE</td>
      <td nowrap tal:content="structure python:view.getSiteRoles(account)">SITE ROLES</td>
      <td tal:content="structure python:view.getLocalRoles(account)">LOCAL ROLES</td>
      <td class="text-right">
        <form method="post">
          <input type="hidden" name="userid"
           tal:attributes="value account/name"/>
            <input class="btn btn-sm btn-primary" type="submit" name="manage"
              tal:attributes="value view/manage_button" />
            <input class="btn btn-sm btn-default" type="submit" name="delete"
              tal:attributes="value view/delete_button" />
        </form>
      </td>
    </tr>
  </tbody>
</table>
