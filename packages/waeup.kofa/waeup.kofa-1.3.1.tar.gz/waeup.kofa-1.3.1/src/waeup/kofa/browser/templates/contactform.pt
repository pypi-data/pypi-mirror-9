<form action="." tal:attributes="action request/URL" method="post"
      enctype="multipart/form-data">

  <tal:block repeat="widget view/widgets">

    <div tal:condition="python: widget.name != 'form.body'"
         tal:content="widget/label">Label
    </div>
    <br />
    <div tal:content="structure widget">
      Textbody
    </div>
    <tal:error tal:condition="widget/error">
      <span tal:replace="structure widget/error">error</span>
      <br />
    </tal:error>
    <br />
  </tal:block>

  <tal:captcha condition="view/captcha_code|nothing">
    <p tal:content="structure view/captcha_code"></p>
    <p i18n:translate="">
      Please solve the captcha to prevent misuse of this service.
    </p>
  </tal:captcha>

    <div tal:condition="view/availableActions">
      <input tal:repeat="action view/actions"
             tal:replace="structure action/render"
             />
    </div>
</form>
