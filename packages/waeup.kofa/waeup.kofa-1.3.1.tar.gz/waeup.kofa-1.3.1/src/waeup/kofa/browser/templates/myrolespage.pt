<h3 i18n:domain="waeup.kofa"
    i18n:translate="">My Portal Roles:</h3>
<table i18n:domain="waeup.kofa" class="form-table">
<tr tal:repeat="role view/getSiteRoles">
    <td>
      <div tal:content="role" >ROLE</div>
    </td>
  </tr>
</table>

<h3 i18n:domain="waeup.kofa"
    i18n:translate="">My Local Roles:</h3>
<table class="form-table">
  <tr tal:repeat="role view/getLocalRoles">
    <td valign="top" >
      <span tal:content="role">ROLE</span>:</td>
    <td>
      <span tal:repeat="object python:view.getLocalRoles[role]">
      <a tal:attributes="href python:view.url(object)"
         tal:content="python:view.url(object)" >OBJECT
      </a>
      <br />
      </span>
    </td>
  </tr>
</table>



