<tal:block repeat="widget view/widgets">
  <tr tal:define="separators view/separators|nothing"
      tal:condition="python: separators and separators.get(widget.name,None)">
    <td class="separator" colspan=2 tal:content="python: separators[widget.name]">
      HEADLINE
    </td>
  </tr>
  <tr>
    <td class="fieldname">
      <span tal:condition="widget/required">*</span>
      <span tal:content="widget/label">LABEL</span>:
    </td>
    <td>
      <span tal:content="structure widget">
        <input type="text" />
      </span>
      <tal:error tal:condition="widget/error">
        <div tal:content="structure widget/error">ERROR</div>
      </tal:error>
      <tal:hint
        tal:condition="python: widget.hint and not getattr(view,'hide_hint',False)">
        <div class="hint" tal:content="structure widget/hint">HINT</div>
      </tal:hint>
    </td>
  </tr>
</tal:block>
