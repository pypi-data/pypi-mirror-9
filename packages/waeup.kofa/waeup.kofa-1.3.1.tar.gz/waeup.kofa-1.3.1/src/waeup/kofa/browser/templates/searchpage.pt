<form method="POST" class="form-inline">
<br />
  <div class="form-group">
      <input type="text" name="query" class="form-control"
    	 tal:attributes="value view/query" />
  </div>
  <div class="form-group">
    <input class="btn btn-primary" type="submit" name="SUBMIT"
      tal:attributes="value view/search_button"/>
  </div>
</form>
<br />
<span  i18n:domain="waeup.kofa" tal:condition="view/hitlist">
    <h3 i18n:translate="">Search Results</h3>
    <table class="kofa-data-table dataTable">
        <thead>
            <tr>
                <th i18n:translate="">Code</th>
                <th i18n:translate="">Title</th>
                <th i18n:translate="">Faculty</th>
                <th i18n:translate="">Department</th>
                <th i18n:translate="">Type</th>
            </tr>
        </thead>
        <tbody>
            <tr tal:repeat="item view/hitlist"  class="gradeB">
            <td>
                <a href="" tal:attributes="href item/url"
                           tal:content="item/code">CODE</a>
            </td>
            <td tal:content="item/title">
                TITLE
            </td>
            <td tal:content="item/fac">
                FACULTY
            </td>
            <td tal:content="item/dep">
                DEPARTMENT
            </td>
            <td tal:content="item/type">
                TTYPE
            </td>
            </tr>
        </tbody>
    </table>
</span>
