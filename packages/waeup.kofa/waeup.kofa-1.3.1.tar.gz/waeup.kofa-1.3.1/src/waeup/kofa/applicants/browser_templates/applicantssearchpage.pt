<form method="POST" i18n:domain="waeup.kofa" class="form-inline">
<br />
  <div class="form-group">
    <input class="btn btn-primary" type="submit" name="search"
      tal:attributes="value view/search_button" />
  </div>
  <div class="form-group">
    <select name="searchtype" class="form-control">
      <option i18n:translate="" value="applicant_id">with id</option>
      <option i18n:translate="" value="fullname">with name</option>
      <option i18n:translate="" value="reg_number">with registration number</option>
      <option i18n:translate="" value="email">with email address</option>
    </select>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="searchterm" />
  </div>

  <br /><br />
  <div tal:condition="view/results">
    <h3 i18n:translate="">Search Results</h3>
    <input type="hidden" name="old_searchterm"
         tal:attributes="value view/searchterm" />
    <input type="hidden" name="old_searchtype"
         tal:attributes="value view/searchtype" />
    <table class="kofa-data-table dataTable">
      <thead>
      <tr>
        <th i18n:translate="">Applicant Id</th>
        <th i18n:translate="">Reg. Number</th>
        <th i18n:translate="">Application State</th>
        <th i18n:translate="">Full Name</th>
      </tr>
      </thead>
      <tbody>
      <tr tal:repeat="item view/results">
        <td> <a tal:attributes="href python:view.url(item)">
          <span tal:content="item/applicant_id">XXXX_1234</span></a>
        </td>
        <td class="center">
          <span tal:content="item/reg_number">9999999</span>
        </td>
        <td tal:content="item/state">admitted</td>
        <td tal:content="item/display_fullname">Bob</td>
      </tr>
      </tbody>
    </table>
  </div>
</form>
