<span tal:condition="view/introduction" tal:omit-tag="">
  <span tal:content="structure view/introduction">INTRODUCTION</span>
  <br />
</span>

<div class="table-responsive">
  <table i18n:domain="waeup.kofa" class="table table-hover">
    <thead>
      <tr>
        <th i18n:translate="">Year</th>
        <th i18n:translate="">Code</th>
        <th i18n:translate="">Title</th>
        <th i18n:translate="">Application Period</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="entry view/containers">
        <td tal:content="entry/year">Year
        </td>
        <td tal:content="entry/__name__">CODE
        </td>
        <td>
  	     <a href=""
      	   tal:attributes="href python:view.url(entry)"
      	   tal:content="entry/title">TITLE</a>
        </td>
        <td>
        <span tal:content="python: layout.formatTZDate(entry.startdate)">START</span>
        -
        <span tal:content="python: layout.formatTZDate(entry.enddate)">END</span>
        </td>
      </tr>
    </tbody>
  </table>
</div>
