<tal:statistics define="stats context/statistics" i18n:domain="waeup.kofa">
  <h2 i18n:translate="">Container Statistics</h2>
  <table class="table">
    <thead>
      <tr>
        <th i18n:translate="" width="40%">Application State</th>
        <th i18n:translate="">Number of Applicants</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="state python:('initialized',
          'started','paid','submitted','admitted','not admitted',
          'created')">
        <td tal:content="state">STATE</td>
        <td tal:content="python: stats[0][state] ">NUMBER</td>
      </tr>
    </tbody>
  </table>
  <table class="table" tal:condition="python: stats[1]">
    <thead>
      <tr>
        <th i18n:translate="" width="40%">Faculty</th>
        <th i18n:translate="">Number of Submissions</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="fac python:stats[1].keys()">
        <td tal:content="fac">FAC</td>
        <td tal:content="python: stats[1][fac] ">NUMBER</td>
      </tr>
    </tbody>
  </table>
</tal:statistics>
