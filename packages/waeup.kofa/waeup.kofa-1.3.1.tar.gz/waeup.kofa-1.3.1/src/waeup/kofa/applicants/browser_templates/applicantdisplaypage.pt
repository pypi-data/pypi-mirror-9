<h2 i18n:domain="waeup.kofa">
  ...
  <span tal:replace="context/translated_state">APPLICATIONSTATE
  </span>
  <span tal:omit-tag=""
    i18n:translate="" tal:condition="context/suspended">(account suspended)
  </span>
  ...
</h2>

<div class="workflow">
  <div tal:repeat="msg context/history/messages">
    <span tal:replace="msg">MESSAGE</span><br />
  </div>
</div>

<img src="" height="180px" tal:attributes="src view/passport_url" />

<table i18n:domain="waeup.kofa" class="form-table">
  <tbody>
    <tal:widgets content="structure provider:widgets" />
    <tr tal:condition="view/getCourseAdmitted">
      <td class="fieldname" i18n:translate="">
          Admitted Course of Study:
      </td>
      <td>
        <span tal:replace="structure view/getCourseAdmitted" />
      </td>
    </tr>
    <tr>
      <td class="fieldname" i18n:translate="">
          Password:
      </td>
      <td>
          <tal:password replace="view/hasPassword" />
      </td>
    <tr>
  </tbody>
</table>
<h3 i18n:domain="waeup.kofa" i18n:translate="">
    Payment Tickets
</h3>
<table i18n:domain="waeup.kofa" class="table table-condensed">
  <thead>
    <tr>
      <th i18n:translate="">Payment Id</th>
      <th i18n:translate="">Creation Date</th>
      <th i18n:translate="">Payment Date</th>
      <th i18n:translate="">Category</th>
      <th i18n:translate="">Item</th>
      <th i18n:translate="">State</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="value context/values">
      <td> <a tal:attributes="href python:view.url(value)">
      <span tal:content="value/p_id">PID</span></a></td>
      <td tal:content="python: layout.formatDatetime(value.creation_date)">CREATION DATE</td>
      <td tal:content="python: layout.formatDatetime(value.payment_date)">PAYMENT DATE</td>
      <td tal:content ="value/category">CATEGORY</td>
      <td tal:content ="value/display_item">ITEM</td>
      <td tal:content ="value/p_state_title">STATE</td>
    </tr>
  </tbody>
</table>
