<table i18n:domain="waeup.kofa">
  <tr tal:repeat="widget view/widgets">
    <td>
      <input class="editcheck" type="checkbox"
             tal:attributes="
                 name string:${view/name}.remove_${repeat/widget/index}"
             tal:condition="view/need_delete" />
    </td>
    <td>
      <input tal:replace="structure widget" />
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <p class="hint" i18n:translate="">
      Don't forget to save the form after adding or deleting items.
      </p>
      <button type="submit"
             class="btn btn-default"
             tal:condition="view/need_add"
             tal:attributes="name string:${view/name}.add"
             tal:content="view/addButtonLabel" />
      <button type="submit" class="btn btn-default"
             tal:condition="view/need_delete"
             tal:attributes="name string:${view/name}.remove"
             i18n:translate="remove-selected-items">Remove selected items</button>
      <a id="kofa-scroll-target"
         tal:condition="view/_kofa_seq_len_changed" />
    </td>
  </tr>
</table>
<input tal:replace="structure view/marker" />
