<div class="wfstatus-sub"  i18n:domain="waeup.kofa">
  Document State: <span tal:replace="context/translated_state">
    STATE</span>
</div>

<div class="workflow">
  <div tal:repeat="msg context/history/messages">
    <span tal:replace="msg">MESSAGE</span><br />
  </div>
</div>

<table class="form-table" i18n:domain="waeup.kofa"
  tal:define="files provider:files">
  <tbody>
    <tr>
      <td i18n:translate="" class="fieldname">
        Document Type:
      </td>
      <td>
        <span tal:content="context/translated_class_name">CLASSNAME</span>
      </td>
    </tr>
    <tal:widgets content="structure provider:widgets" />
    <tr>
      <td i18n:translate="" class="fieldname">
        Content:
      </td>
      <td>
        <span tal:content="structure view/html">HTML</span>
      </td>
    </tr>
    <tr tal:condition="python: getattr(context, 'state', None) == 'published'">
      <td i18n:translate="" class="fieldname">
        HTML Element:
      </td>
      <td>
        &lt;a href=&quot;
        <span tal:replace="python: view.url(context, 'display')"></span>
        &quot;&gt;<span tal:replace="context/title">FILENAME</span>&lt;/a&gt;
      </td>
    </tr>
  </tbody>
</table>
