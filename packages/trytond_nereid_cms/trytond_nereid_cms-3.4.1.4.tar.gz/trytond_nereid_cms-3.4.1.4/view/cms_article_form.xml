<form string="CMS Article" col="6">
    <group colspan="6" col="4" id="definition">
        <label name="title" />
        <field name="title" />
        <label name="uri" />
        <field name="uri" />
        <label name="template" />
        <field name="template" />
        <label name="image"/>
        <field name="image"/>
        <label name="active" />
        <field name="active" />
    </group>
    <notebook colspan="6">                            
        <page string="Content" id="content">
            <label name="content_type" />
            <field name="content_type" colspan="2" />
            <newline/>
            <field name="content" colspan="4" />
        </page>
        <page string="Parameters" id="parameters">
            <label name="sequence" />
            <field name="sequence" />
            <label name="author" />
            <field name="author" />
            <label name="published_on" />
            <field name="published_on" />
            <label name="banner" />
            <field name="banner" />
            <separator name="description" colspan="4"/>
            <field name="description" colspan="4"/>
        </page>
        <page string="Attributes" id="attributes">
            <field name="attributes"/>
        </page>
        <page string="Categories" id="article-categories">
            <field name="categories" />
        </page>
    </notebook>
    <field name="state" colspan="2"/>
    <group col="3" colspan="3" id="buttons">
        <button name="archive" string="Archive"
            icon="tryton-cancel"/>
        <button name="publish" string="Publish"
            icon="tryton-go-next"/>
        <button name="draft" string="Draft"
            icon="tryton-go-previous"/>
    </group>
</form>
