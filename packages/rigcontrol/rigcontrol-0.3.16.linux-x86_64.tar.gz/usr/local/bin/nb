import sys
import k3lib as riglib

try:
  rig = riglib.K3()

  if len(sys.argv) == 1:
      print(rig.nbq())
  elif len(sys.argv) == 2:
      rig.nb(sys.argv[1], "0")
  elif len(sys.argv) == 3:
      rig.nb(sys.argv[1], sys.argv[2])
finally:
    rig.close()
