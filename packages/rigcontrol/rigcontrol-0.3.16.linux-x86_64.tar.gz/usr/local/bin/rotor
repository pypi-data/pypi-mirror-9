import string, serial, time, sys, math, os, time
from lxml import etree

import rotorlib

rotor = rotorlib.Rotor()
try:
    if len(sys.argv) == 2:
        rotor.rotate(int(sys.argv[1]))
    else:
        print(rotor.rotateq())
finally:
   rotor.close()
