import sys
import k3lib as riglib

try:
    rig = riglib.K3()

    if len(sys.argv) == 1:
        print(rig.vfoq())
    if len(sys.argv) > 1:
        if (sys.argv[1]=='a'):
            print(rig.vfoa())
        elif (sys.argv[1]=='b'):
            print(rig.vfob())
finally:
    rig.close()
