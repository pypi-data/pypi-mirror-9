import sys
import k3lib as riglib
import string

if len(sys.argv) > 1:
    rig = riglib.K3()
    if (sys.argv[1][0]=='+'):
        print(rig.qsy(1000*(rig.qsyq2()+string.atof(sys.argv[1][1:]))))
    elif (sys.argv[1][0]=='-'):
        print(rig.qsy2(1000*(rig.qsyq2()-string.atof(sys.argv[1][1:]))))
    else:
        print(rig.qsy2(string.atof(sys.argv[1])*1000))
    rig.close()
else:
    print("usage: qsy2 khz.hz|+khz.hz|-khz.hz")

