import sys
import k3lib as riglib
import string

if len(sys.argv) == 1:
    rig = riglib.K3()
    print(rig.powerq())
    rig.close()
elif len(sys.argv) == 2:
    rig = riglib.K3()
    print(rig.power(string.atof(sys.argv[1])))
    rig.close()
else:
    print("usage: power [watts]")
