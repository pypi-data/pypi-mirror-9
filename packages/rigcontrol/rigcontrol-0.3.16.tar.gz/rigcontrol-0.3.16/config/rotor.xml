<?xml version="1.0"?>
<rotor>

  <!-- Adjustable rotor offset:
       added to SETBEARING, subtracted from BEARING 
  -->
  <offset>0</offset>

  <port>
    <device>/dev/rotor</device>
    <baud>4800</baud>
  </port>

  <reply>
    <symbol>bearing</symbol>
    <size>4</size>
    <string>;</string>
    <data>
      <dtype>decimal</dtype>
      <size>3</size>
      <max>359</max>
      <min>000</min>
    </data>
  </reply>

  <command>
    <symbol>init</symbol>
    <size>0</size>
<!--
    <size>1</size>
    <string>v</string>
    <reply>VERSION</reply>
-->
  </command>

  <command>
    <symbol>setbearing</symbol>
    <size>7</size>
    <string>AP1</string>
    <data>
      <dtype>decimal</dtype>
      <size>3</size>
      <max>359</max>
      <min>000</min>
      <resol>1</resol>
    </data>
    <byte>0D</byte>
  </command>

  <command>
    <symbol>rotate</symbol>
    <size>4</size>
    <string>AM1</string>
    <byte>0D</byte>
  </command>

  <command>
    <symbol>bearing</symbol>
    <size>3</size>
    <string>AI1</string>
    <byte>0D</byte>
    <info>bearing</info>
  </command>

</rotor>

