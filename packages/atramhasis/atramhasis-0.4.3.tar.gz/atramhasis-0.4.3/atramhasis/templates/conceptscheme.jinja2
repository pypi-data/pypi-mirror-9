{% extends 'base.jinja2' %}

{% block html_title %}Concept schemes{% endblock %}

{% from "macros.jinja2" import
    render_labels
%}

{% block content %}
	<div class="row">
		<div class="large-4 medium-3 columns">
			<ul class="panel side-nav text-center">
				<li><a title="Download the scheme and it's top concepts in RDF/XML format." href="{{request.route_path('atramhasis.rdf_conceptscheme_export_ext', scheme_id=conceptscheme.scheme_id)}}">Download RDF/XML</a></li>
				<li><a title="Download the scheme and it's top concepts in N3/Turle format." href="{{request.route_path('atramhasis.rdf_conceptscheme_export_turtle_ext', scheme_id=conceptscheme.scheme_id)}}">Download N3/Turtle</a></li>
				<li class="divider"></li>
				<li><a title="Download the scheme and all it's concepts and collections in RDF/XML format." href="{{request.route_path('atramhasis.rdf_full_export_ext', scheme_id=conceptscheme.scheme_id)}}">Download Full RDF/XML</a></li>
				<li><a title="Download the scheme and all it's concepts and collections in N3/Turtle format." href="{{request.route_path('atramhasis.rdf_full_export_turtle_ext', scheme_id=conceptscheme.scheme_id)}}">Download Full N3/Turtle</a></li>
			</ul>
        </div>
        <div class="large-8 medium-9 columns">
            <h1 class="concept">{{ conceptscheme.title }}</h1>
            <ul>
                <li>id: {{ conceptscheme.scheme_id }}</li>
                {% if conceptscheme.uri %}
                <li>uri: <a href="{{ conceptscheme.uri }}">{{ conceptscheme.uri }}</a></li>
                {% endif %}
            </ul>

            {% if conceptscheme.labels %}
            <h2 class="concept">{% trans %}labels{% endtrans %}</h2>
            <ul>
                {%- for label in conceptscheme.labels %}
                    <li>{{ label.type }} <em class="language">({{ label.language }})</em>: {{ label.label }}</li>
                {%- endfor %}
            </ul>
            {% endif %}

            {% if conceptscheme.notes %}
            <h2 class="concept">{% trans %}notes{% endtrans %}</h2>
            <ul>
                {%- for note in conceptscheme.notes %}
                    <li>{{ note.notetype_id }} <em class="language">({{ note.language }})</em>: {{ note.note}}</li>
                {%- endfor %}
            </ul>
            {% endif %}

            {% if conceptscheme.top_concepts %}
            <h2 class="concept">top {% trans %}type_concept{% endtrans %}</h2>
            <ul>
				{%- for concept in conceptscheme.top_concepts %}
					<li><a href="{{ request.route_path('concept', scheme_id= conceptscheme.scheme_id, c_id = concept.id) }}">{{ concept.label }}</a> <em>(id: {{ concept.id }})</em></li>
                {%- endfor %}
            </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
